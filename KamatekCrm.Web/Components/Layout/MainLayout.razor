@inherits LayoutComponentBase
@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject KamatekCrm.Web.Services.ApiAuthenticationStateProvider AuthStateProvider

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">Kamatek ERP</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-3">@context.User.Identity?.Name</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="@Logout" />
            </Authorized>
            <NotAuthorized>
                <MudButton Href="/login" Color="Color.Inherit">Giriş Yap</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6" Color="Color.Primary">Menü</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/jobs" Icon="@Icons.Material.Filled.Work">İş Takibi</MudNavLink>
            <MudNavLink Href="/customers" Icon="@Icons.Material.Filled.People">Müşteriler</MudNavLink>
            <MudNavLink Href="/technicians" Icon="@Icons.Material.Filled.Engineering">Teknisyenler</MudNavLink>
            <MudNavLink Href="/reports" Icon="@Icons.Material.Filled.BarChart">Raporlar</MudNavLink>
            <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">Ayarlar</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _drawerOpen = true;

    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#1A237E",
            Secondary = "#FF4081",
            AppbarBackground = "#1A237E",
            DrawerBackground = "#FAFAFA",
            DrawerText = "#424242"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#3949AB",
            Secondary = "#FF4081"
        }
    };

    private void ToggleDrawer() { _drawerOpen = !_drawerOpen; }

    private async Task Logout()
    {
        await AuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login");
    }
}