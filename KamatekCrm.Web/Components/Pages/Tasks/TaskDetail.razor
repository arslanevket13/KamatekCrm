@page "/tasks/{TaskId:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject ITaskService TaskService
@inject NavigationManager NavManager

<PageTitle>Task Details - KamatekCRM</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (task == null)
{
    <div class="alert alert-warning">
        Task not found.
        <a href="tasks" class="alert-link">Back to list</a>
    </div>
}
else
{
    <div class="mb-3">
        <a href="tasks" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Tasks
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Task #@task.Id: @task.Title</h5>
            <div>
                <span class="badge @GetStatusBadgeClass(task.Status) me-2">@task.Status</span>
                <span class="badge @GetPriorityBadgeClass(task.Priority)">@task.Priority</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Customer</h6>
                    <p class="fw-bold mb-0">@task.Customer.Name</p>
                    <p class="mb-0"><a href="tel:@task.Customer.Phone">@task.Customer.Phone</a></p>
                    <p class="small text-muted">@task.Customer.Address, @task.Customer.District/@task.Customer.City</p>
                    <a href="https://maps.google.com/?q=@task.Customer.Latitude,@task.Customer.Longitude" target="_blank"
                           class="btn btn-sm btn-outline-primary mt-2">
                        <i class="bi bi-geo-alt"></i> Navigate
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <h6 class="text-muted">Details</h6>
                    <p class="mb-2"><strong>Category:</strong> @task.Category</p>
                    <p class="mb-2"><strong>Scheduled:</strong> @(task.ScheduledDate?.ToString("g") ?? "Not Scheduled")</p>
                    <p class="mb-2"><strong>Description:</strong></p>
                    <p class="bg-light p-2 rounded">@task.Description</p>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Photos</h5>
            </div>
            <div class="card-body">
                <div class="row g-2 mb-3">
                    @if (task.Photos != null && task.Photos.Any())
                    {
                        @foreach (var photo in task.Photos)
                        {
                            <div class="col-4 col-md-3">
                                <a href="@photo.Url" target="_blank">
                                    <img src="@photo.ThumbnailUrl" class="img-thumbnail" alt="@photo.Description"
                                         style="height: 100px; object-fit: cover; width: 100%;" />
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-muted">No photos uploaded yet.</div>
                    }
                </div>

                <div class="mb-3">
                    <label for="photoUpload" class="form-label">Upload Photo</label>
                    <InputFile OnChange="@UploadFiles" class="form-control" id="photoUpload" accept="image/*" />
                    @if (isUploading)
                    {
                        <div class="progress mt-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                                 style="width: 100%">Uploading...</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card-footer bg-white">
            <div class="d-flex gap-2">
                @if (task.Status == JobStatus.Pending)
                {
                    <button class="btn btn-primary" @onclick="() => UpdateStatus(JobStatus.InProgress)">Start Job</button>
                }
                else if (task.Status == JobStatus.InProgress)
                {
                    <button class="btn btn-success" @onclick="() => UpdateStatus(JobStatus.Completed)">Complete Job</button>
                    <button class="btn btn-warning" @onclick="() => UpdateStatus(JobStatus.WaitingForParts)">Wait for
                        Parts</button>
                    }
                </div>
            </div>
        </div>
    }

@code {
    [Parameter]
    public int TaskId { get; set; }

    private TaskDetailDto? task;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadTask();
    }

    private async Task LoadTask()
    {
        isLoading = true;
        try
        {
            task = await TaskService.GetTaskDetail(TaskId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading task: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private bool isUploading = false;

    private async Task UploadFiles(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            isUploading = true;
            try
            {
                // Max 10MB
                long maxFileSize = 1024 * 1024 * 10;

                using var content = new MultipartFormDataContent();
                var fileContent = new StreamContent(file.OpenReadStream(maxFileSize));
                fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(file.ContentType);
                content.Add(fileContent, "file", file.Name);

                if (await TaskService.UploadPhoto(TaskId, content))
                {
                    await LoadTask();
                }
                else
                {
                    Console.WriteLine("Upload failed");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Upload error: {ex.Message}");
            }
            finally
            {
                isUploading = false;
            }
        }
    }

    private async Task UpdateStatus(JobStatus newStatus)
    {
        if (await TaskService.UpdateStatus(TaskId, (int)newStatus, "Status updated from web app"))
        {
            await LoadTask();
        }
    }

    private string GetStatusBadgeClass(JobStatus status)
    {
        return status switch
        {
            JobStatus.Pending => "bg-warning text-dark",
            JobStatus.InProgress => "bg-primary",
            JobStatus.Completed => "bg-success",
            JobStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetPriorityBadgeClass(JobPriority priority)
    {
        return priority switch
        {
            JobPriority.Critical => "bg-danger",
            JobPriority.High => "bg-warning text-dark",
            JobPriority.Medium => "bg-info text-dark",
            _ => "bg-light text-dark border"
        };
    }
}