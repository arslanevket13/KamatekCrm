<UserControl x:Class="KamatekCrm.Views.RoutePlanningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar: Rota Listesi -->
        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Background="#F5F5F5">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Günlük Rota Planı" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0,0,0,10"/>
                </StackPanel>
                
                <ListView Grid.Row="1" ItemsSource="{Binding RoutePoints}" BorderThickness="0" Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="5" Margin="0,0,0,5" Padding="10" BorderBrush="#DDD" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#1976D2"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                         <TextBlock Text="Durum: " FontSize="11"/>
                                         <!-- Basit bir durum göstergesi -->
                                         <TextBlock Text="{Binding IsCompleted, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Tamamlandı|Bekliyor'}" FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Harita Alanı -->
        <Grid Grid.Column="1">
            <!-- WebView2 Control -->
            <wv2:WebView2 x:Name="MapWebView"/>
            
            <!-- Yükleniyor Göstergesi (Opsiyonel) -->
            <!-- <ProgressBar IsIndeterminate="True" VerticalAlignment="Top" Height="2" Background="Transparent" Foreground="#1976D2"/> -->
        </Grid>
    </Grid>
</UserControl>
