<Window x:Class="KamatekCrm.Views.QuickCustomerAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="âž• HÄ±zlÄ± MÃ¼ÅŸteri Ekle"
        Height="420" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVis"/>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,12,0,4"/>
        </Style>

        <Style x:Key="FieldBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#D0D5DD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="FieldBox.Trigger" TargetType="TextBox" BasedOn="{StaticResource FieldBox}">
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1565C0"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Margin="24" Background="White" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.08"/>
        </Border.Effect>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Yeni MÃ¼ÅŸteri" FontSize="22" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="SatÄ±ÅŸ iÃ§in hÄ±zlÄ± mÃ¼ÅŸteri kaydÄ± oluÅŸturun." 
                           FontSize="12" Foreground="#8E9AAF" Margin="0,4,0,0"/>
                <Separator Margin="0,14,0,0" Background="#E2E8F0"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- Ad Soyad -->
                <TextBlock Text="Ad Soyad *" Style="{StaticResource FieldLabel}"/>
                <TextBox x:Name="FullNameBox"
                         Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FieldBox.Trigger}"
                         Tag="Ã–rn: Ahmet YÄ±lmaz">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- Telefon -->
                <TextBlock Text="Telefon" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FieldBox.Trigger}">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- E-posta -->
                <TextBlock Text="E-posta" Style="{StaticResource FieldLabel}"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FieldBox.Trigger}">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- Hata mesajÄ± -->
                <Border Background="#FFF0F0" CornerRadius="6" Padding="10,8" Margin="0,10,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BoolVis}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F" FontSize="12" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- Footer Buttons -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Ä°ptal"
                        Command="{Binding CancelCommand}"
                        Height="40" FontSize="14"
                        Background="#F1F5F9" Foreground="#555"
                        BorderThickness="1" BorderBrush="#D0D5DD"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2"
                        Content="ðŸ’¾ Kaydet &amp; SeÃ§"
                        Command="{Binding SaveCustomerCommand}"
                        IsDefault="True"
                        Height="40" FontSize="14" FontWeight="SemiBold"
                        Background="#1565C0" Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.45"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
