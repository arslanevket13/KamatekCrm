<UserControl x:Class="KamatekCrm.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             Background="#0F0F14">

    <UserControl.Resources>
        <!-- Dark Theme Text Colors for Glassmorphism -->
        <SolidColorBrush x:Key="DashTextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DashTextSecondary" Color="#B3B3B3"/>
        <SolidColorBrush x:Key="DashTextTertiary" Color="#808080"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ==================== ROW 0: HEADER ==================== -->
            <Border Grid.Row="0" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding WelcomeMessage}" 
                                   FontSize="32" FontWeight="Bold" 
                                   Foreground="{DynamicResource DashTextPrimary}"/>
                        <TextBlock FontSize="14" Margin="0,6,0,0"
                                   Foreground="{DynamicResource DashTextSecondary}">
                            <Run Text="Komut Merkezi • "/>
                            <Run Text="{Binding TodayDate, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:Button Content="Yenile" 
                                Icon="{ui:SymbolIcon ArrowSync24}"
                                Command="{Binding RefreshDashboardCommand}"
                                Appearance="Secondary"
                                Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ==================== ROW 1: QUICK STATS ==================== -->
            <UniformGrid Grid.Row="1" Columns="8" Margin="0,0,0,24">
                
                <!-- Bugünün İşleri -->
                <Border CornerRadius="14" Margin="0,0,8,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Bugünün İşleri" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding TodaysJobsCount}" 
                                       FontSize="36" FontWeight="Bold" 
                                       Foreground="#3B82F6" 
                                       Margin="0,8,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Ellipse Width="8" Height="8" Fill="#3B82F6" Margin="0,0,6,0"/>
                                <TextBlock Text="planlanmış" FontSize="11" Foreground="{DynamicResource DashTextTertiary}"/>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#3B82F6" CornerRadius="14" Width="52" Height="52"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.3" Color="#3B82F6"/>
                            </Border.Effect>
                            <ui:SymbolIcon Symbol="Calendar24" FontSize="24" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Teslime Hazır -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Teslime Hazır" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding ReadyRepairsCount}" 
                                       FontSize="36" FontWeight="Bold" 
                                       Foreground="#10B981" 
                                       Margin="0,8,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,6,0"/>
                                <TextBlock Text="cihaz bekliyor" FontSize="11" Foreground="{DynamicResource DashTextTertiary}"/>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#10B981" CornerRadius="14" Width="52" Height="52"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.3" Color="#10B981"/>
                            </Border.Effect>
                            <ui:SymbolIcon Symbol="Checkmark24" FontSize="24" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Stok Uyarısı -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Stok Uyarısı" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding LowStockCount}" 
                                       FontSize="36" FontWeight="Bold" 
                                       Foreground="#EF4444" 
                                       Margin="0,8,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Ellipse Width="8" Height="8" Fill="#EF4444" Margin="0,0,6,0"/>
                                <TextBlock Text="düşük stok" FontSize="11" Foreground="{DynamicResource DashTextTertiary}"/>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EF4444" CornerRadius="14" Width="52" Height="52"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.3" Color="#EF4444"/>
                            </Border.Effect>
                            <ui:SymbolIcon Symbol="Warning24" FontSize="24" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Aktif İşler -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Aktif İşler" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding ActiveJobsCount}" 
                                       FontSize="36" FontWeight="Bold" 
                                       Foreground="#F59E0B" 
                                       Margin="0,8,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <Ellipse Width="8" Height="8" Fill="#F59E0B" Margin="0,0,6,0"/>
                                <TextBlock Text="devam ediyor" FontSize="11" Foreground="{DynamicResource DashTextTertiary}"/>
                            </StackPanel>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#F59E0B" CornerRadius="14" Width="52" Height="52"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.3" Color="#F59E0B"/>
                            </Border.Effect>
                            <ui:SymbolIcon Symbol="Wrench24" FontSize="24" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border> 

                <!-- Toplam Müşteri -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Toplam Müşteri" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding TotalCustomers}" 
                                       FontSize="32" FontWeight="Bold" 
                                       Foreground="#6366F1" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="kayıtlı" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#6366F1" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="People24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Bu Ay Yeni Müşteri -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Yeni Müşteri" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding NewCustomersThisMonth}" 
                                       FontSize="32" FontWeight="Bold" 
                                       Foreground="#10B981" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="bu ay" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#10B981" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="PersonAdd24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- VIP Müşteriler -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="VIP Müşteri" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding VipCustomers}" 
                                       FontSize="32" FontWeight="Bold" 
                                       Foreground="#F59E0B" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="öncelikli" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#F59E0B" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Star24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Yaklaşan Doğum Günleri -->
                <Border CornerRadius="14" Margin="8,0,0,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Doğum Günü" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding UpcomingBirthdays}" 
                                       FontSize="32" FontWeight="Bold" 
                                       Foreground="#EC4899" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="yaklaşıyor" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EC4899" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Gift24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- ==================== ROW 2: SATIŞ KARTLARI ==================== -->
            <UniformGrid Grid.Row="2" Columns="4" Margin="0,0,0,24">
                
                <!-- Bugünkü Satış -->
                <Border CornerRadius="14" Margin="0,0,8,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Bugünkü Satış" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding TodaySalesTotal, StringFormat='{}{0:C0}'}" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#8B5CF6" 
                                       Margin="0,4,0,0"/>
                            <TextBlock FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis">
                                <Run Text="{Binding TodaySalesCount, Mode=OneWay}"/>
                                <Run Text=" satış"/>
                            </TextBlock>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#8B5CF6" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Money24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Haftalık Satış -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Haftalık Satış" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding WeekSalesTotal, StringFormat='{}{0:C0}'}" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#06B6D4" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="son 7 gün" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#06B6D4" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="ChartMultiple24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Aylık Satış -->
                <Border CornerRadius="14" Margin="4,0,4,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Aylık Satış" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding MonthlySalesTotal, StringFormat='{}{0:C0}'}" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#14B8A6" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding CurrentMonthName, Mode=OneWay}" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#14B8A6" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="DataTrending24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Ortalama Sipariş -->
                <Border CornerRadius="14" Margin="8,0,0,0" Padding="16">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Ort. Sipariş" FontSize="11" FontWeight="Medium"
                                       Foreground="{DynamicResource DashTextSecondary}"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding AverageSaleAmount, StringFormat='{}{0:C0}'}" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#F97316" 
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="ortalama tutar" FontSize="10" 
                                       Foreground="{DynamicResource DashTextTertiary}"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <Border Grid.Column="1" Background="#F97316" 
                                CornerRadius="12" Width="40" Height="40"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Cart24" FontSize="20" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- ==================== ROW 3: CHARTS ==================== -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 7 Günlük Trend Grafiği -->
                <Border Grid.Column="0" CornerRadius="14" Margin="0,0,12,0" Padding="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ChartMultiple24" FontSize="20" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,8,0"/>
                                <TextBlock Text="Haftalık Performans" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource DashTextPrimary}"/>
                            </StackPanel>
                            <TextBlock Text="Son 7 günlük gelir ve tamamlanan iş trendi" FontSize="12" 
                                       Foreground="{DynamicResource DashTextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1" 
                                            Series="{Binding WeeklyTrendSeries}"
                                            XAxes="{Binding WeeklyTrendXAxes}"
                                            YAxes="{Binding WeeklyTrendYAxes}"
                                            Height="220"
                                            TooltipPosition="Top"
                                            ZoomMode="X"/>
                    </Grid>
                </Border>

                <!--İş Kategorileri Dağılımı -->
                <Border Grid.Column="1" CornerRadius="14" Margin="12,0,0,0" Padding="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="DataPie24" FontSize="20" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,8,0"/>
                                <TextBlock Text="Aktif İş Dağılımı" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{DynamicResource DashTextPrimary}"/>
                            </StackPanel>
                            <TextBlock Text="Kategori bazlı" FontSize="12" 
                                       Foreground="{DynamicResource DashTextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <lvc:PieChart Grid.Row="1" 
                                      Series="{Binding JobCategoryPieSeries}"
                                      Height="220"
                                      TooltipPosition="Top"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- ==================== ROW 4: MAIN WIDGETS ==================== -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>

                <!-- ========== WIDGET 1: KRİTİK UYARILAR ========== -->
                <Border Grid.Column="0" CornerRadius="14" Margin="0,0,12,0" Padding="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#FEF2F2" CornerRadius="10" Padding="14" Margin="-16,-16,-16,16">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Warning24" FontSize="22" Foreground="#DC2626" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="Kritik Uyarılar" FontSize="15" FontWeight="Bold" 
                                               Foreground="#DC2626"/>
                                    <TextBlock Text="Stok seviyeleri" FontSize="11" 
                                               Foreground="#F87171"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="350">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding LowStockProducts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="12" Margin="0,0,0,8" 
                                                    Background="{DynamicResource ThemeBackground}"
                                                    CornerRadius="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding ProductName}" 
                                                                   FontWeight="Medium" FontSize="13"
                                                                   Foreground="{DynamicResource DashTextPrimary}"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                            <Border CornerRadius="4" Padding="8,3">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Setter Property="Background" Value="#FFFBEB"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding UrgencyLevel}" Value="Kritik">
                                                                                <Setter Property="Background" Value="#FEF2F2"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="{Binding UrgencyLevel}" FontSize="10" FontWeight="SemiBold">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding UrgencyLevel}" Value="Kritik">
                                                                                    <Setter Property="Foreground" Value="#DC2626"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <Border Grid.Column="1" CornerRadius="8" Padding="14,8"
                                                            VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#EF4444"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding CurrentStock}" Value="0">
                                                                        <Setter Property="Background" Value="#991B1B"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding CurrentStock}" 
                                                                   FontWeight="Bold" FontSize="18"
                                                                   Foreground="White" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <StackPanel HorizontalAlignment="Center" Margin="0,24">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LowStockProducts.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="32" Foreground="#10B981" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Tüm stoklar yeterli" FontSize="13" 
                                               Foreground="#10B981" FontWeight="Medium" Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- ========== WIDGET 2: BUGÜNÜN İŞLERİ + TESLİME HAZIR ========== -->
                <Border Grid.Column="1" CornerRadius="14" Margin="12,0,12,0" Padding="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header: Bugünün İşleri -->
                        <Border Grid.Row="0" Background="#EFF6FF" CornerRadius="10" Padding="14" Margin="-16,-16,-16,16">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Wrench24" FontSize="22" Foreground="#1D4ED8" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="Bugünün İşleri" FontSize="15" FontWeight="Bold" 
                                               Foreground="#1D4ED8"/>
                                    <TextBlock Text="Arıza &amp; Saha Operasyonları" FontSize="11" 
                                               Foreground="#60A5FA"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Today's Jobs List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="150">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding TodaysJobs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,0,0,6"
                                                    Background="{DynamicResource ThemeBackground}"
                                                    CornerRadius="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="#3B82F6" 
                                                            CornerRadius="6" Padding="10,6" Margin="0,0,12,0"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ScheduledTime}" 
                                                                   FontWeight="Bold" FontSize="12"
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding CustomerName}" 
                                                                   FontWeight="Medium" FontSize="13"
                                                                   Foreground="{DynamicResource DashTextPrimary}"/>
                                                        <TextBlock Text="{Binding Category}" FontSize="11" 
                                                                   Foreground="{DynamicResource DashTextSecondary}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                                    <ui:SymbolIcon Symbol="Calendar24" FontSize="16" Foreground="{DynamicResource DashTextTertiary}" VerticalAlignment="Center"/>
                                    <TextBlock Text="Bugün planlanmış iş yok" 
                                               Foreground="{DynamicResource DashTextTertiary}"
                                               FontStyle="Italic" Margin="8,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TodaysJobs.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Separator: Teslime Hazır -->
                        <Border Grid.Row="2" Background="#ECFDF5" CornerRadius="10" Padding="14" 
                                Margin="-16,12,-16,12">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="18" Foreground="#059669" VerticalAlignment="Center"/>
                                <TextBlock Text="Teslime Hazır Tamirler" FontSize="13" FontWeight="Bold" 
                                           Foreground="#059669" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Ready Repairs List -->
                        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" MaxHeight="150">
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding ReadyToDeliverRepairs}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10" Margin="0,0,0,6"
                                                    Background="{DynamicResource ThemeBackground}"
                                                    CornerRadius="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="#10B981" 
                                                            CornerRadius="6" Padding="8,4" Margin="0,0,12,0"
                                                            VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding TicketNo}" 
                                                                   FontWeight="Bold" FontSize="11"
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding CustomerName}" 
                                                                   FontWeight="Medium" FontSize="13"
                                                                   Foreground="{DynamicResource DashTextPrimary}"/>
                                                        <TextBlock Text="{Binding DeviceInfo}" FontSize="11" 
                                                                   Foreground="{DynamicResource DashTextSecondary}"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                        <TextBlock FontSize="12" Foreground="#F59E0B" FontWeight="SemiBold">
                                                            <Run Text="{Binding DaysWaiting, Mode=OneWay}"/>
                                                            <Run Text=" gün"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <TextBlock Text="Teslime hazır cihaz yok" 
                                           Foreground="{DynamicResource DashTextTertiary}"
                                           FontStyle="Italic" Margin="0,12,0,0"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ReadyToDeliverRepairs.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- ========== WIDGET 3: AYLIK ÖZET ========== -->
                <Border Grid.Column="2" CornerRadius="14" Margin="12,0,0,0" Padding="20">
                    <Border.Background>
                        <SolidColorBrush Color="White" Opacity="0.08"/>
                    </Border.Background>
                    <Border.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.15"/>
                    </Border.BorderBrush>
                    <Border.BorderThickness>
                        <Thickness>1</Thickness>
                    </Border.BorderThickness>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.25" Color="Black" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#FFFBEB" CornerRadius="10" Padding="14" Margin="-16,-16,-16,16">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Money24" FontSize="22" Foreground="#D97706" VerticalAlignment="Center"/>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="Aylık Özet" FontSize="15" FontWeight="Bold" 
                                               Foreground="#D97706"/>
                                    <TextBlock Text="{Binding CurrentMonthName}" FontSize="11" 
                                               Foreground="#FBBF24"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Row="1" VerticalAlignment="Top">
                            
                            <!-- Total Sales -->
                            <Border Background="{DynamicResource ThemeBackground}" CornerRadius="14" Padding="20" Margin="0,0,0,16">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="TOPLAM SATIŞ" FontSize="11" FontWeight="Bold"
                                               Foreground="{DynamicResource DashTextSecondary}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock FontSize="34" FontWeight="Bold" 
                                               Foreground="#10B981" HorizontalAlignment="Center"
                                               Margin="0,8,0,0">
                                        <Run Text="₺"/>
                                        <Run Text="{Binding MonthlySalesTotal, StringFormat=N0, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Foreground="{DynamicResource DashTextSecondary}"
                                               HorizontalAlignment="Center" Margin="0,6,0,0">
                                        <Run Text="{Binding MonthlySalesCount, Mode=OneWay}"/>
                                        <Run Text=" işlem"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Quick Stats -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Completed Jobs -->
                                <Border Grid.Column="0" Background="#ECFDF5" CornerRadius="12" Padding="14" Margin="0,0,6,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="10" Foreground="#059669" VerticalAlignment="Center"/>
                                            <TextBlock Text="Biten" FontSize="10" FontWeight="SemiBold"
                                                       Foreground="#059669" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding MonthlyJobsCompleted}" 
                                                   FontSize="28" FontWeight="Bold" 
                                                   Foreground="#10B981" HorizontalAlignment="Center"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Active Jobs -->
                                <Border Grid.Column="1" Background="#FFFBEB" CornerRadius="12" Padding="14" Margin="6,0,0,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ui:SymbolIcon Symbol="Timer24" FontSize="10" Foreground="#D97706" VerticalAlignment="Center"/>
                                            <TextBlock Text="Aktif" FontSize="10" FontWeight="SemiBold"
                                                       Foreground="#D97706" Margin="4,0,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ActiveJobsCount}" 
                                                   FontSize="28" FontWeight="Bold" 
                                                   Foreground="#F59E0B" HorizontalAlignment="Center"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Daily Summary -->
                            <Border Background="{DynamicResource ThemeBackground}" CornerRadius="12" Padding="14" Margin="0,16,0,0">
                                <StackPanel>
                                    <TextBlock Text="BUGÜN" FontSize="10" FontWeight="Bold"
                                               Foreground="{DynamicResource DashTextSecondary}"
                                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontSize="14" Foreground="#10B981" FontWeight="SemiBold">
                                            <Run Text="↑ ₺"/>
                                            <Run Text="{Binding DailyIncome, StringFormat=N0, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock Text=" / " FontSize="14" Foreground="{DynamicResource DashTextTertiary}"/>
                                        <TextBlock FontSize="14" Foreground="#EF4444" FontWeight="SemiBold">
                                            <Run Text="↓ ₺"/>
                                            <Run Text="{Binding DailyExpense, StringFormat=N0, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
