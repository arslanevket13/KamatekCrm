<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- KAMATEK CRM - DARK THEME COLOR SYSTEM -->

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#60CDFF</Color>
    <Color x:Key="PrimaryDarkColor">#0078D4</Color>
    <Color x:Key="PrimaryLightColor">#99E5FF</Color>
    <Color x:Key="PrimaryAccentColor">#00D4E5</Color>

    <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#A0A0A0</Color>
    <Color x:Key="SecondaryDarkColor">#808080</Color>
    <Color x:Key="SecondaryLightColor">#C0C0C0</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#6CCB5F</Color>
    <Color x:Key="WarningColor">#FCE100</Color>
    <Color x:Key="ErrorColor">#FF99A4</Color>
    <Color x:Key="InfoColor">#60CDFF</Color>

    <!-- Gradient Colors -->
    <Color x:Key="GradientStartColor">#818CF8</Color>
    <Color x:Key="GradientMiddleColor">#A78BFA</Color>
    <Color x:Key="GradientEndColor">#22D3EE</Color>

    <!-- Neutral Colors -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="BlackColor">#000000</Color>
    <Color x:Key="BackgroundPrimaryColor">#1C1C1C</Color>
    <Color x:Key="BackgroundSecondaryColor">#2D2D2D</Color>
    <Color x:Key="BackgroundTertiaryColor">#3D3D3D</Color>
    <Color x:Key="SurfaceColor">#282828</Color>
    <Color x:Key="CardColor">#323232</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B3B3B3</Color>
    <Color x:Key="TextTertiaryColor">#808080</Color>
    <Color x:Key="TextDisabledColor">#4D4D4D</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderPrimaryColor">#404040</Color>
    <Color x:Key="BorderSecondaryColor">#505050</Color>
    <Color x:Key="BorderFocusColor">#60CDFF</Color>

    <!-- State Colors -->
    <Color x:Key="HoverColor">#3D3D3D</Color>
    <Color x:Key="ActiveColor">#4D4D4D</Color>
    <Color x:Key="SelectedColor">#0A3D5C</Color>

    <!-- BRUSHES - Doğrudan Renk Kullan -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#60CDFF"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#99E5FF"/>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#00D4E5"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#808080"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#C0C0C0"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#6CCB5F"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FCE100"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF99A4"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#60CDFF"/>

    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#1C1C1C"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#282828"/>
    <SolidColorBrush x:Key="CardBrush" Color="#323232"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B3B3B3"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#808080"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#4D4D4D"/>

    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#404040"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#505050"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#60CDFF"/>

    <SolidColorBrush x:Key="HoverBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="ActiveBrush" Color="#4D4D4D"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#0A3D5C"/>

    <!-- GRADIENTS -->
    <LinearGradientBrush x:Key="BrandGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#818CF8" Offset="0"/>
        <GradientStop Color="#A78BFA" Offset="0.5"/>
        <GradientStop Color="#22D3EE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#60CDFF" Offset="0"/>
        <GradientStop Color="#00D4E5" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#22D3EE" Offset="0"/>
        <GradientStop Color="#A78BFA" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0D1B2A" Offset="0"/>
        <GradientStop Color="#1B2838" Offset="1"/>
    </LinearGradientBrush>

    <!-- DROP SHADOWS -->
    <DropShadowEffect x:Key="SubtleShadow" BlurRadius="8" ShadowDepth="2" Direction="315" Color="#000000" Opacity="0.3"/>
    <DropShadowEffect x:Key="MediumShadow" BlurRadius="16" ShadowDepth="4" Direction="315" Color="#000000" Opacity="0.4"/>
    <DropShadowEffect x:Key="StrongShadow" BlurRadius="24" ShadowDepth="8" Direction="315" Color="#000000" Opacity="0.5"/>
    <DropShadowEffect x:Key="GlowEffect" BlurRadius="20" ShadowDepth="0" Color="#60CDFF" Opacity="0.5"/>

    <!-- CORNER RADIUS -->
    <CornerRadius x:Key="SmallRadius">4</CornerRadius>
    <CornerRadius x:Key="MediumRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeRadius">12</CornerRadius>
    <CornerRadius x:Key="XLRadius">16</CornerRadius>
    <CornerRadius x:Key="CardRadius">12</CornerRadius>

    <!-- FONTS -->
    <FontFamily x:Key="PrimaryFont">Segoe UI Variable, Segoe UI, Arial</FontFamily>
    <FontFamily x:Key="MonoFont">Cascadia Code, Consolas</FontFamily>

    <sys:Double x:Key="FontSizeTiny" xmlns:sys="clr-namespace:System;assembly=mscorlib">10</sys:Double>
    <sys:Double x:Key="FontSizeSmall" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeMedium" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="FontSizeXLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="FontSizeXXLarge" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
    <sys:Double x:Key="FontSizeTitle" xmlns:sys="clr-namespace:System;assembly=mscorlib">40</sys:Double>

    <!-- SPACING -->
    <Thickness x:Key="TinyMargin">4</Thickness>
    <Thickness x:Key="SmallMargin">8</Thickness>
    <Thickness x:Key="MediumMargin">16</Thickness>
    <Thickness x:Key="LargeMargin">24</Thickness>
    <Thickness x:Key="XLMargin">32</Thickness>

    <Thickness x:Key="SmallPadding">8</Thickness>
    <Thickness x:Key="MediumPadding">16</Thickness>
    <Thickness x:Key="LargePadding">24</Thickness>

    <!-- BACKCOMPATIBILITY -->
    <SolidColorBrush x:Key="BorderColor" Color="#404040"/>
    <SolidColorBrush x:Key="PrimaryColorKey" Color="#60CDFF"/>
    <SolidColorBrush x:Key="SecondaryColorKey" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#1C1C1C"/>

    <DropShadowEffect x:Key="DropShadow" BlurRadius="15" ShadowDepth="2" Direction="315" Color="#000000" Opacity="0.4"/>

    <!-- Legacy Theme Colors -->
    <Color x:Key="ThemePrimaryColor">#60CDFF</Color>
    <Color x:Key="ThemePrimaryDarkColor">#0078D4</Color>
    <Color x:Key="ThemeAccentColor">#00D4E5</Color>
    <Color x:Key="ThemeBackgroundColor">#1C1C1C</Color>
    <Color x:Key="ThemeTextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="ThemeTextSecondaryColor">#B3B3B3</Color>
    <Color x:Key="ThemeTextTertiaryColor">#808080</Color>

    <SolidColorBrush x:Key="ThemePrimary" Color="#60CDFF"/>
    <SolidColorBrush x:Key="ThemePrimaryDark" Color="#0078D4"/>
    <SolidColorBrush x:Key="ThemeAccent" Color="#00D4E5"/>

</ResourceDictionary>
