<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== LIGHT THEME COLOR PALETTE ==================== -->
    
    <!-- Primary Colors -->
    <Color x:Key="ThemePrimaryColor">#2196F3</Color>
    <Color x:Key="ThemePrimaryDarkColor">#1976D2</Color>
    <Color x:Key="ThemePrimaryLightColor">#BBDEFB</Color>
    <Color x:Key="ThemeAccentColor">#FF4081</Color>
    
    <!-- Background Colors -->
    <Color x:Key="ThemeBackgroundColor">#F5F7FA</Color>
    <Color x:Key="ThemeSurfaceColor">#FFFFFF</Color>
    <Color x:Key="ThemeCardColor">#FFFFFF</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="ThemeSidebarColor">#1A2332</Color>
    <Color x:Key="ThemeSidebarHoverColor">#2A3A4F</Color>
    <Color x:Key="ThemeSidebarActiveColor">#3A5068</Color>
    <Color x:Key="ThemeSidebarTextColor">#E8EDF3</Color>
    <Color x:Key="ThemeSidebarSecondaryTextColor">#8BA3BC</Color>
    
    <!-- Text Colors -->
    <Color x:Key="ThemeTextPrimaryColor">#1A1A2E</Color>
    <Color x:Key="ThemeTextSecondaryColor">#5C6B7A</Color>
    <Color x:Key="ThemeTextTertiaryColor">#9AA5B1</Color>
    
    <!-- Border & Divider -->
    <Color x:Key="ThemeBorderColor">#E2E8F0</Color>
    <Color x:Key="ThemeDividerColor">#EDF2F7</Color>
    
    <!-- Status Colors -->
    <Color x:Key="ThemeSuccessColor">#10B981</Color>
    <Color x:Key="ThemeWarningColor">#F59E0B</Color>
    <Color x:Key="ThemeErrorColor">#EF4444</Color>
    <Color x:Key="ThemeInfoColor">#3B82F6</Color>
    
    <!-- Extended Palette Colors -->
    <Color x:Key="ThemePurpleColor">#8B5CF6</Color>
    <Color x:Key="ThemePinkColor">#EC4899</Color>
    <Color x:Key="ThemeCyanColor">#06B6D4</Color>
    <Color x:Key="ThemeIndigoColor">#6366F1</Color>
    <Color x:Key="ThemeTealColor">#14B8A6</Color>
    <Color x:Key="ThemeOrangeColor">#F97316</Color>
    
    <!-- Gradient Start/End Colors -->
    <Color x:Key="GradientBlueStartColor">#6366F1</Color>
    <Color x:Key="GradientBlueEndColor">#3B82F6</Color>
    <Color x:Key="GradientGreenStartColor">#10B981</Color>
    <Color x:Key="GradientGreenEndColor">#059669</Color>
    <Color x:Key="GradientPurpleStartColor">#8B5CF6</Color>
    <Color x:Key="GradientPurpleEndColor">#A855F7</Color>
    <Color x:Key="GradientOrangeStartColor">#F97316</Color>
    <Color x:Key="GradientOrangeEndColor">#FB923C</Color>
    <Color x:Key="GradientPinkStartColor">#EC4899</Color>
    <Color x:Key="GradientPinkEndColor">#F472B6</Color>
    <Color x:Key="GradientCyanStartColor">#06B6D4</Color>
    <Color x:Key="GradientCyanEndColor">#22D3EE</Color>
    
    <!-- Brush Resources -->
    <SolidColorBrush x:Key="ThemePrimary" Color="{StaticResource ThemePrimaryColor}"/>
    <SolidColorBrush x:Key="ThemePrimaryDark" Color="{StaticResource ThemePrimaryDarkColor}"/>
    <SolidColorBrush x:Key="ThemePrimaryLight" Color="{StaticResource ThemePrimaryLightColor}"/>
    <SolidColorBrush x:Key="ThemeAccent" Color="{StaticResource ThemeAccentColor}"/>
    
    <SolidColorBrush x:Key="ThemeBackground" Color="{StaticResource ThemeBackgroundColor}"/>
    <SolidColorBrush x:Key="ThemeSurface" Color="{StaticResource ThemeSurfaceColor}"/>
    <SolidColorBrush x:Key="ThemeCard" Color="{StaticResource ThemeCardColor}"/>
    
    <SolidColorBrush x:Key="ThemeSidebar" Color="{StaticResource ThemeSidebarColor}"/>
    <SolidColorBrush x:Key="ThemeSidebarHover" Color="{StaticResource ThemeSidebarHoverColor}"/>
    <SolidColorBrush x:Key="ThemeSidebarActive" Color="{StaticResource ThemeSidebarActiveColor}"/>
    <SolidColorBrush x:Key="ThemeSidebarText" Color="{StaticResource ThemeSidebarTextColor}"/>
    <SolidColorBrush x:Key="ThemeSidebarSecondaryText" Color="{StaticResource ThemeSidebarSecondaryTextColor}"/>
    
    <SolidColorBrush x:Key="ThemeTextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
    <SolidColorBrush x:Key="ThemeTextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
    <SolidColorBrush x:Key="ThemeTextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
    
    <SolidColorBrush x:Key="ThemeBorder" Color="{StaticResource ThemeBorderColor}"/>
    <SolidColorBrush x:Key="ThemeDivider" Color="{StaticResource ThemeDividerColor}"/>
    
    <SolidColorBrush x:Key="ThemeSuccess" Color="{StaticResource ThemeSuccessColor}"/>
    <SolidColorBrush x:Key="ThemeWarning" Color="{StaticResource ThemeWarningColor}"/>
    <SolidColorBrush x:Key="ThemeError" Color="{StaticResource ThemeErrorColor}"/>
    <SolidColorBrush x:Key="ThemeInfo" Color="{StaticResource ThemeInfoColor}"/>
    
    <!-- Extended Palette Brushes -->
    <SolidColorBrush x:Key="ThemePurple" Color="{StaticResource ThemePurpleColor}"/>
    <SolidColorBrush x:Key="ThemePink" Color="{StaticResource ThemePinkColor}"/>
    <SolidColorBrush x:Key="ThemeCyan" Color="{StaticResource ThemeCyanColor}"/>
    <SolidColorBrush x:Key="ThemeIndigo" Color="{StaticResource ThemeIndigoColor}"/>
    <SolidColorBrush x:Key="ThemeTeal" Color="{StaticResource ThemeTealColor}"/>
    <SolidColorBrush x:Key="ThemeOrange" Color="{StaticResource ThemeOrangeColor}"/>
    
    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="GradientBlue" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientBlueStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientBlueEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientGreen" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientGreenStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientGreenEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientPurple" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientPurpleStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientPurpleEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientOrange" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientOrangeStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientOrangeEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientPink" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientPinkStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientPinkEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientCyan" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource GradientCyanStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientCyanEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Card Shadow Colors -->
    <Color x:Key="CardShadowColor">#1A000000</Color>
    <Color x:Key="CardShadowHoverColor">#33000000</Color>
    
    <!-- Legacy Color Compatibility (for backward compatibility) -->
    <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHue" Color="{StaticResource ThemePrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryHue" Color="{StaticResource ThemeSuccessColor}"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource ThemeBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceColor" Color="{StaticResource ThemeSurfaceColor}"/>
    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource ThemeCardColor}"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DividerColor" Color="{StaticResource ThemeDividerColor}"/>
    <SolidColorBrush x:Key="ErrorColor" Color="{StaticResource ThemeErrorColor}"/>
    <SolidColorBrush x:Key="SuccessColor" Color="{StaticResource ThemeSuccessColor}"/>
    <SolidColorBrush x:Key="WarningColor" Color="{StaticResource ThemeWarningColor}"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource ThemePrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkColor" Color="{StaticResource ThemePrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource ThemeAccentColor}"/>
    <SolidColorBrush x:Key="TextPrimaryColor" Color="{StaticResource ThemeTextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="{StaticResource ThemeTextSecondaryColor}"/>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="ThemePrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2196F3" Offset="0"/>
        <GradientStop Color="#1976D2" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ThemeHeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A2332" Offset="0"/>
        <GradientStop Color="#2A3A4F" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
