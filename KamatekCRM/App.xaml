<Application x:Class="KamatekCrm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KamatekCrm"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             xmlns:views="clr-namespace:KamatekCrm.Views"
             xmlns:converters="clr-namespace:KamatekCrm.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- WPF-UI Theme -->
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

                <!-- Custom Theme - Light -->
                <ResourceDictionary Source="Resources/Themes/CustomTheme.xaml"/>
                
                <!-- Animations -->
                <ResourceDictionary Source="Resources/Animations.xaml"/>
                <!-- Stiller -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Navigation Views -->
            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <views:LoginView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MainContentViewModel}">
                <views:MainContentView/>
            </DataTemplate>

            <!-- Content Views -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
                <views:CustomersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:CustomerDetailViewModel}">
                <views:CustomerDetailView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductViewModel}">
                <views:ProductsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ServiceJobViewModel}">
                <views:ServiceJobsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:StockCountViewModel}">
                <views:StockCountView/>
            </DataTemplate>

             <DataTemplate DataType="{x:Type vm:StockReportsViewModel}">
                <views:StockReportsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:UsersViewModel}">
                <views:UsersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SystemLogsViewModel}">
                <views:SystemLogsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:RepairListViewModel}">
                <views:RepairListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:FieldJobListViewModel}">
                <views:FieldJobListView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:FinanceViewModel}">
                <views:FinanceView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AnalyticsViewModel}">
                <views:AnalyticsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:FinancialHealthViewModel}">
                <views:FinancialHealthView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type vm:PurchaseOrderViewModel}">
                <views:PurchaseOrderView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SuppliersViewModel}">
                <views:SuppliersView/>
            </DataTemplate>

            <!-- SMART ERP MODULES -->
            <DataTemplate DataType="{x:Type vm:RoutePlanningViewModel}">
                <views:RoutePlanningView/>
            </DataTemplate>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:IntToVisibilityConverter x:Key="IntToVis"/>
            <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVis"/>
            <converters:BoolToStringConverter x:Key="BoolToStringConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVis"/>
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZero"/>
            <converters:BalanceColorConverter x:Key="BalanceColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
