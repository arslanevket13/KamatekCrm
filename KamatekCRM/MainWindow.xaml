<ui:FluentWindow x:Class="KamatekCrm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KamatekCrm"
        xmlns:views="clr-namespace:KamatekCrm.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Kamatek CRM - Teknik Servis ve Stok Takip" 
        Height="750" Width="1280"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Kamatek CRM" ShowMaximize="True" ShowMinimize="True" ShowClose="True">
            <ui:TitleBar.Header>
                <StackPanel Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Kamatek CRM" FontWeight="SemiBold" FontSize="13" Foreground="White"/>
                </StackPanel>
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Tek ContentControl - NavigationService ile view değişir -->
            <ContentControl Content="{Binding CurrentView}"/>
            
            <!-- Loading Overlay -->
            <views:LoadingOverlay x:Name="LoadingControl" />

            <!-- Toast Notifications Overlay -->
            <views:ToastNotificationControl x:Name="ToastControl" />
        </Grid>
    </Grid>
    
</ui:FluentWindow>
