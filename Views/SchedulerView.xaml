<UserControl x:Class="KamatekCrm.Views.SchedulerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="#F5F5F5">

    <!-- Context provided by MainContentViewModel via DataTemplate -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar: AtanmamÄ±ÅŸ Ä°ÅŸler -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="AtanmamÄ±ÅŸ Ä°ÅŸler" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0,0,0,15"/>
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding UnassignedJobs}"
                         dd:DragDrop.IsDragSource="True"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5" CornerRadius="4" Padding="10" Margin="0,0,0,8" BorderBrush="#E0E0E0" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Customer.FullName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11" Foreground="#757575"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Main Content: Teknisyen Listesi -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Teknisyen Planlama" FontSize="20" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Technicians}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Margin="0,0,0,15" CornerRadius="6" Padding="15" Effect="{StaticResource MaterialDesignShadowDepth1}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Teknisyen Bilgisi -->
                                    <StackPanel VerticalAlignment="Center">
                                        <Border Width="50" Height="50" CornerRadius="25" Background="#2196F3" Margin="0,0,0,10" HorizontalAlignment="Left">
                                            <TextBlock Text="ðŸ‘¤" Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding AdSoyad}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Role}" Foreground="Gray" FontSize="12"/>
                                    </StackPanel>

                                    <!-- Drop Zone -->
                                    <Border Grid.Column="1" 
                                            Background="#FAFAFA" 
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="2" 
                                            CornerRadius="4" 
                                            Margin="10,0,0,0"
                                            Height="100"
                                            dd:DragDrop.IsDropTarget="True"
                                            dd:DragDrop.DropHandler="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <TextBlock Text="Ä°ÅŸi Buraya SÃ¼rÃ¼kle" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="#BDBDBD" 
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
