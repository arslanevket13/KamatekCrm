<UserControl x:Class="KamatekCrm.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="{DynamicResource ThemeBackground}">

    <Grid>
        <!-- Centered Login Card -->
        <Border Background="{DynamicResource ThemeSurface}" CornerRadius="16" 
                BorderBrush="{DynamicResource ThemePrimary}" BorderThickness="2"
                Width="380" Height="480"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Opacity="0.2" ShadowDepth="8"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="{DynamicResource ThemePrimaryDark}" CornerRadius="14,14,0,0" Padding="15">
                    <StackPanel HorizontalAlignment="Center">
                        <Image Source="/Assets/Images/KamatekLogo.png" 
                               Width="280" Height="Auto"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"/>
                        <TextBlock Text="Teknik Servis YÃ¶netim Sistemi" 
                                   FontSize="13" 
                                   Foreground="{DynamicResource ThemePrimaryLight}" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Login Form -->
                <StackPanel Grid.Row="1" Margin="40,40,40,40" VerticalAlignment="Center">
                    
                    <!-- Username -->
                    <TextBlock Text="KullanÄ±cÄ± AdÄ±" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource ThemeTextPrimary}"
                               Margin="0,0,0,8"/>
                    <Border Background="{DynamicResource ThemeSurface}" CornerRadius="8" 
                            BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1"
                            Padding="12,0">
                        <Grid>
                            <TextBlock Text="ðŸ‘¤" VerticalAlignment="Center" 
                                       Foreground="{DynamicResource ThemeTextTertiary}" FontSize="16"/>
                            <TextBox x:Name="UsernameTextBox"
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     VerticalAlignment="Center"
                                     Height="40"
                                     Padding="28,0,0,0"
                                     FontSize="14"
                                     Foreground="{DynamicResource ThemeTextPrimary}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Password -->
                    <TextBlock Text="Åžifre" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource ThemeTextPrimary}"
                               Margin="0,20,0,8"/>
                    <Border Background="{DynamicResource ThemeSurface}" CornerRadius="8" 
                            BorderBrush="{DynamicResource ThemeBorder}" BorderThickness="1"
                            Padding="12,0">
                        <Grid>
                            <TextBlock Text="ðŸ”’" VerticalAlignment="Center" 
                                       Foreground="{DynamicResource ThemeTextTertiary}" FontSize="16"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"
                                         Height="40"
                                         Padding="28,0,0,0"
                                         FontSize="14"
                                         Foreground="{DynamicResource ThemeTextPrimary}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Remember Me Checkbox -->
                    <CheckBox Content="Beni HatÄ±rla" 
                              IsChecked="{Binding RememberMe}"
                              Foreground="{DynamicResource ThemeTextSecondary}"
                              FontSize="13"
                              Margin="0,16,0,0"
                              Cursor="Hand"/>
                    
                    <!-- Error Message -->
                    <Border Background="{DynamicResource ThemeError}" CornerRadius="6" 
                            Padding="12,8" Margin="0,16,0,0" Opacity="0.15"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="{DynamicResource ThemeError}" 
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Login Button -->
                    <Button Content="GiriÅŸ Yap"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=PasswordBox}"
                            Margin="0,24,0,0"
                            Height="48"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8"
                                                    Padding="20,0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Version Info -->
                    <TextBlock Text="v1.0.0 Â© 2025 Kamatek"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeTextTertiary}"
                               FontSize="11"
                               Margin="0,24,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
