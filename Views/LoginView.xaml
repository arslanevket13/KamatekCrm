<UserControl x:Class="KamatekCrm.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Vector Icons -->
        <Geometry x:Key="UserIcon">M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z</Geometry>
        <Geometry x:Key="LockIcon">M12,17A2,2 0 0,0 14,15C14,13.89 13.11,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V7A5,5 0 0,1 12,2A5,5 0 0,1 17,7V8H18M12,4A3,3 0 0,0 9,7V8H15V7A3,3 0 0,0 12,4Z</Geometry>

        <!-- Input Style -->
        <Style x:Key="FluentInput" TargetType="Control">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Path x:Name="IconPath"
                                      Grid.Column="0"
                                      Data="{TemplateBinding Tag}"
                                      Fill="#AAFFFFFF"
                                      Width="18" Height="18"
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>

                                <!-- Bottom Border Accent -->
                                <Border x:Name="AccentBorder"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Bottom"
                                        Height="2"
                                        Background="{DynamicResource ThemePrimary}"
                                        CornerRadius="0,0,8,8"
                                        Opacity="0"
                                        Margin="1,0,1,1"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#66FFFFFF"/>
                                <Setter TargetName="Border" Property="Background" Value="#26FFFFFF"/>
                                <Setter TargetName="AccentBorder" Property="Opacity" Value="1"/>
                                <Setter TargetName="IconPath" Property="Fill" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Loading Animation -->
        <Style x:Key="LoginButtonFluent" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ThemePrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                            <Grid>
                                <ContentPresenter x:Name="contentPresenter" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Visibility="Visible"/>
                                
                                <StackPanel x:Name="LoadingIndicator" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            Visibility="Collapsed">
                                    <Ellipse Width="18" Height="18" Stroke="White" StrokeThickness="2" StrokeDashArray="3 1">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="Rotate" CenterX="9" CenterY="9"/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="Rotate"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         From="0" To="360" Duration="0:0:1"
                                                                         RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                    <TextBlock Text="Giriş Yapılıyor..." Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemePrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10" Opacity="0.7">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Canvas Width="18" Height="18" VerticalAlignment="Center">
                                            <Ellipse Width="18" Height="18" Stroke="White" StrokeThickness="2" StrokeDashArray="3 1">
                                                <Ellipse.RenderTransform>
                                                    <RotateTransform x:Name="Rotate" CenterX="9" CenterY="9"/>
                                                </Ellipse.RenderTransform>
                                            </Ellipse>
                                        </Canvas>
                                        <TextBlock Text="Giriş Yapılıyor..." Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="Rotate"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360" Duration="0:0:1"
                                                                     RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Modern Mesh Gradient Background -->
        <Grid x:Name="BackgroundMesh">
            <Rectangle Fill="#FF0A0A1F"/>
            <Ellipse Margin="-200,-300,0,0" Width="800" Height="800" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#406366F1" Offset="0"/>
                        <GradientStop Color="#006366F1" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Margin="0,0,-300,-400" Width="1000" Height="1000" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Ellipse.Fill>
                    <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                        <GradientStop Color="#30A855F7" Offset="0"/>
                        <GradientStop Color="#00A855F7" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Login Card with Glassmorphism -->
        <Border Width="400" Height="520" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                CornerRadius="24"
                ClipToBounds="True">
            
            <Grid>
                <!-- Backdrop Blur Simulation -->
                <Border Background="#1AFFFFFF">
                    <Border.Effect>
                        <BlurEffect Radius="40"/>
                    </Border.Effect>
                </Border>

                <!-- Glass Surface -->
                <Border Background="#26FFFFFF" 
                        BorderBrush="#4DFFFFFF" 
                        BorderThickness="1.5"
                        CornerRadius="24">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="40" Opacity="0.4" ShadowDepth="0" Color="Black"/>
                    </Border.Effect>
                    
                    <Grid Margin="40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,30">
                            <Image Source="/Assets/Images/KamatekLogo.png" 
                                   Width="200" Height="Auto"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   Effect="{x:Null}"/>
                            <TextBlock Text="Teknik Servis Yönetimi" 
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       Foreground="#BBFFFFFF" 
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>

                        <!-- Inputs -->
                        <StackPanel Grid.Row="1">
                            <!-- Username -->
                            <TextBlock Text="Kullanıcı Adı" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Foreground="#88FFFFFF"
                                       Margin="4,0,0,8"/>
                            <TextBox x:Name="UsernameTextBox"
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FluentInput}"
                                     Tag="{StaticResource UserIcon}"
                                     Height="44"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"/>

                            <!-- Password -->
                            <TextBlock Text="Şifre" 
                                       FontSize="12"
                                       FontWeight="SemiBold" 
                                       Foreground="#88FFFFFF"
                                       Margin="4,20,0,8"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Style="{StaticResource FluentInput}"
                                         Tag="{StaticResource LockIcon}"
                                         Height="44"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"/>

                            <!-- Options -->
                            <CheckBox Content="Beni Hatırla" 
                                      IsChecked="{Binding RememberMe}"
                                      Foreground="#AAFFFFFF"
                                      FontSize="13"
                                      Margin="4,16,0,0"
                                      Cursor="Hand"/>
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                            <!-- Error Message -->
                            <Border Background="#44FF5252" CornerRadius="8" 
                                    Padding="15,10" Margin="0,0,0,16"
                                    Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z" Fill="#FFFF5252" Width="14" Height="14" Stretch="Uniform" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ErrorMessage}" 
                                               Foreground="White" 
                                               FontSize="12"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Button x:Name="LoginBtn"
                                    Content="Giriş Yap"
                                    Command="{Binding LoginCommand}"
                                    CommandParameter="{Binding ElementName=PasswordBox}"
                                    Style="{StaticResource LoginButtonFluent}"
                                    Height="48"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- Footer -->
                        <TextBlock Grid.Row="3" 
                                   Text="v1.0.1 © 2026 Kamatek"
                                   HorizontalAlignment="Center"
                                   Foreground="#66FFFFFF"
                                   FontSize="11"
                                   Margin="0,30,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
