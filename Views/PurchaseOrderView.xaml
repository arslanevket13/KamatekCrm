                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="#252541" Foreground="White"
                      GridLinesVisibility="Horizontal" BorderThickness="0"
                      RowBackground="#252541" AlternatingRowBackground="#2d2d52"
                      HeadersVisibility="Column"
                      MaxHeight="200"
                      Margin="0,0,0,15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PO No" Binding="{Binding PONumber}" Width="100"/>
                    <DataGridTextColumn Header="TedarikÃ§i" Binding="{Binding SupplierName}" Width="*"/>
                    <DataGridTextColumn Header="Durum" Binding="{Binding StatusDisplay}" Width="100"/>
                    <DataGridTextColumn Header="Tarih" Binding="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="85"/>
                    <DataGridTextColumn Header="Tutar" Binding="{Binding TotalAmount, StringFormat='â‚º{0:N2}'}" Width="90"/>
                    <DataGridTemplateColumn Header="Ä°ÅŸlem" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="âœ… Teslim Al" 
                                            Command="{Binding DataContext.ReceiveGoodsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#27ae60" Foreground="White" 
                                            Padding="6,3" Margin="2" BorderThickness="0"
                                            FontSize="10" Cursor="Hand"/>
                                    <Button Content="âŒ Ä°ptal" 
                                            Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#e74c3c" Foreground="White" 
                                            Padding="6,3" Margin="2" BorderThickness="0"
                                            FontSize="10" Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Order Details / Items Panel -->
            <Border Grid.Row="3" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                    Visibility="{Binding SelectedOrder, Converter={StaticResource NullToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Item Bar -->
                    <Border Grid.Row="0" Margin="0,0,0,10" Padding="10" Background="#2d2d52" CornerRadius="6" Visibility="Visible">
                        <StackPanel>
                            <TextBlock Text="Manuel ÃœrÃ¼n Ekleme" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding Products}" 
                                      SelectedItem="{Binding SelectedProductToAdd}" 
                                      IsEditable="True"
                                      Text="{Binding ManualProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="ProductName"
                                      Width="200" Margin="0,0,10,0"/>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Adet:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding QuantityToAdd}" Width="50" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Birim Fiyat:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding UnitPriceToAdd}" Width="70" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="KDV %:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding TaxRateToAdd}" Width="40" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>
                            
                             <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Ä°skonto %:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding DiscountRateToAdd}" Width="40" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <Button Content="âž• Listeye Ekle" Command="{Binding AddManualItemCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Background="#1A237E" Foreground="White" 
                                    Padding="15,6" BorderThickness="0" Cursor="Hand"/>

                            <Button Content="ðŸª„ Faturadan Tara" Command="{Binding ScanInvoiceCommand}"
                                    Background="#9b59b6" Foreground="White" Padding="15,6" Margin="10,0,0,0" BorderThickness="0" Cursor="Hand"
                                    ToolTip="PDF faturasÄ±ndan Ã¼rÃ¼nleri otomatik ayÄ±kla"/>
                        </StackPanel>
                    </StackPanel>
                    </Border>

                    <!-- Manual Entry Panel (Injected) -->
                    <GroupBox Header="Manuel ÃœrÃ¼n Ekle" Margin="0,0,0,10" Padding="5" BorderBrush="#1A237E">
                      <Grid>
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*"/>
                          <ColumnDefinition Width="80"/>
                          <ColumnDefinition Width="100"/>
                          <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" ItemsSource="{Binding ProductList}" DisplayMemberPath="ProductName" SelectedItem="{Binding SelectedManualProduct}" IsEditable="True" Text="{Binding ManualProductName}" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding ManualQuantity}" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="2" Text="{Binding ManualUnitPrice}" Margin="0,0,5,0"/>
                        <Button Grid.Column="3" Content="EKLE" Command="{Binding AddManualItemCommand}" Background="#2E7D32" Foreground="White"/>
                      </Grid>
                    </GroupBox>

                    <!-- Items List -->
                    <DataGrid x:Name="ItemsGrid" Grid.Row="1" ItemsSource="{Binding SelectedOrder.Items}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" Foreground="White"
                              GridLinesVisibility="Horizontal" BorderThickness="0"
                              RowBackground="#252541" AlternatingRowBackground="#2d2d52"
                              HeadersVisibility="Column"
                              MinHeight="150" MaxHeight="300">
                    
                    <!-- Items Actions Toolbar (New) -->
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="PDF'den Otomatik Tara" Command="{Binding ScanInvoiceCommand}">
                                <MenuItem.Icon>
                                    <TextBlock Text="ðŸª„"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ÃœrÃ¼n" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Miktar" Binding="{Binding Quantity}" Width="60"/>
                            <DataGridTextColumn Header="Birim Fiyat" Binding="{Binding UnitPrice, StringFormat='â‚º{0:N2}'}" Width="90"/>
                            <DataGridTextColumn Header="KDV" Binding="{Binding TaxAmount, StringFormat='â‚º{0:N2}'}" Width="80"/>
                            <DataGridTextColumn Header="Ä°skonto" Binding="{Binding DiscountAmount, StringFormat='â‚º{0:N2}'}" Width="80"/>
                            <DataGridTextColumn Header="Toplam" Binding="{Binding LineTotal, StringFormat='â‚º{0:N2}'}" Width="90" FontWeight="Bold"/>
                            <DataGridTemplateColumn Header="Sil" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="TRASH" 
                                                Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" Foreground="#e74c3c"
                                                BorderThickness="0" Padding="5" Cursor="Hand">
                                             <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="ðŸ—‘ï¸"/>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Invoice & File Upload Section -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0" Margin="0,0,0,5" BorderBrush="#3d3d5c" BorderThickness="0,0,0,1" Padding="0,0,0,5">
                            <DockPanel>
                                <Button DockPanel.Dock="Right" Content="ðŸ“‚ Dosya Ekle" Command="{Binding AddAttachmentCommand}"
                                        Style="{StaticResource ModernButton}" Background="#3498db" Height="28" Padding="10,0" FontSize="11"/>
                                <TextBlock Text="ðŸ“Ž SipariÅŸ Ekleri &amp; Belgeler" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                            </DockPanel>
                        </Border>

                        <!-- Attachments List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding OrderAttachments}"
                                 SelectedItem="{Binding SelectedAttachment, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MaxHeight="120">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="ItemBorder" Padding="5" Margin="2" 
                                                        Background="#2d2d52" CornerRadius="4" Cursor="Hand" Width="200" ToolTip="{Binding FileName}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#3498db"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#404070"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="16" Margin="0,0,5,0"/>
