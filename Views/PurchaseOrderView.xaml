                                            <Button Content="ðŸ‘ï¸" Command="{Binding DataContext.OpenAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="2"/>
                                            <Button Content="ðŸ—‘ï¸" Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="2" Foreground="#e74c3c"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <TextBlock Grid.Row="1" Text="Dosya yok" Foreground="#666" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"
                                   Visibility="{Binding OrderAttachments.Count, Converter={StaticResource IntToVis}, ConverterParameter=Invert}"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Order Summary Footer -->
            <Border Grid.Row="4" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="SeÃ§ili sipariÅŸ Ã¶zeti (kalem detaylarÄ± iÃ§in sipariÅŸi geniÅŸletin)" 
                               Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Ara Toplam -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Ara Toplam" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderSubTotal, StringFormat='â‚º{0:N2}'}" 
                                           Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Ä°ndirim -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Ä°ndirim" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderDiscountAmount, StringFormat='-â‚º{0:N2}'}" 
                                           Foreground="#E74C3C" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- KDV -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="KDV" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderTaxAmount, StringFormat='+â‚º{0:N2}'}" 
                                           Foreground="#3498db" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Genel Toplam -->
                        <Border Background="#27ae60" CornerRadius="6" Padding="15,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="GENEL TOPLAM" Foreground="White" FontSize="10" Opacity="0.8"/>
                                <TextBlock Text="{Binding OrderGrandTotal, StringFormat='â‚º{0:N2}'}" 
                                           Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="YÃ¼kleniyor..." FontSize="24" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
