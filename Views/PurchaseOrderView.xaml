<UserControl x:Class="KamatekCrm.Views.PurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- HEADER -->
            <RowDefinition Height="Auto"/> <!-- MANUAL ENTRY -->
            <RowDefinition Height="*"/>    <!-- ITEM LIST -->
            <RowDefinition Height="Auto"/> <!-- FOOTER -->
        </Grid.RowDefinitions>

        <!-- HEADERCARD: Supplier Selection -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp2" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E8EAF6" CornerRadius="50" Width="40" Height="40" Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="TruckDelivery" Foreground="#1A237E" Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Satın Alma Siparişi" FontSize="16" FontWeight="Bold" Foreground="#1A237E"/>
                        <TextBlock Text="Tedarikçi seçimi ve ürün girişi yapınız" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <ComboBox Grid.Column="1" ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" 
                          DisplayMemberPath="CompanyName" Margin="32,0"
                          materialDesign:HintAssist.Hint="Tedarikçi Seçimi Yapınız..."
                          Style="{StaticResource MaterialDesignOutlinedComboBox}" VerticalAlignment="Center"/>
                
                <Button Grid.Column="2" Command="{Binding CreateOrderCommand}"
                         Style="{StaticResource MaterialDesignOutlinedButton}" 
                         BorderBrush="#0288D1" Foreground="#0288D1" Content="TEMİZLE / YENİ"/>
            </Grid>
        </materialDesign:Card>

        <!-- MANUAL ENTRY PANEL (GroupBox) -->
        <GroupBox Grid.Row="1" Header="MANUEL ÜRÜN EKLE" Margin="0,0,0,16" 
                  Style="{StaticResource MaterialDesignGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryMid"
                  materialDesign:ColorZoneAssist.Background="#1A237E"
                  materialDesign:ColorZoneAssist.Foreground="White"
                  materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>     <!-- Product -->
                    <ColumnDefinition Width="120"/>   <!-- Qty -->
                    <ColumnDefinition Width="150"/>   <!-- Price -->
                    <ColumnDefinition Width="Auto"/>  <!-- Button -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Inputs -->
                <ComboBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding ProductList}" SelectedItem="{Binding SelectedProduct}"
                          DisplayMemberPath="ProductName" Margin="0,0,8,0"
                          materialDesign:HintAssist.Hint="Ürün Listesinden Seç..."
                          Style="{StaticResource MaterialDesignFilledComboBox}" Background="White"/>
                
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Quantity}" 
                         materialDesign:HintAssist.Hint="Miktar"
                         Style="{StaticResource MaterialDesignFilledTextBox}" Background="White"
                         Margin="0,0,8,0" Padding="8"/>
                
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding UnitPrice, StringFormat=N2}" 
                         materialDesign:HintAssist.Hint="Birim Fiyat"
                         Style="{StaticResource MaterialDesignFilledTextBox}" Background="White"
                         Margin="0,0,16,0" Padding="8"/>

                <Button Grid.Row="0" Grid.Column="3" Command="{Binding AddManualItemCommand}"
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        Background="#2E7D32" BorderBrush="#2E7D32" 
                        Width="40" Height="40" ToolTip="Sepete Ekle">
                    <materialDesign:PackIcon Kind="Plus" Width="24" Height="24"/>
                </Button>
            </Grid>
        </GroupBox>

        <!-- ITEMS LIST -->
        <materialDesign:Card Grid.Row="2" UniformCornerRadius="8" materialDesign:ElevationAssist.Elevation="Dp2" Background="White" VerticalAlignment="Stretch">
            <DataGrid ItemsSource="{Binding CurrentOrderItems}" AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      materialDesign:DataGridAssist.CellPadding="12,8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="12,12">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#444"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ÜRÜN ADI" Binding="{Binding ProductName}" Width="*" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                    <DataGridTextColumn Header="MİKTAR" Binding="{Binding Quantity}" Width="100" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                    <DataGridTextColumn Header="BİRİM FİYAT" Binding="{Binding UnitPrice, StringFormat=C2}" Width="140" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                    <DataGridTextColumn Header="TOPLAM" Binding="{Binding LineTotal, StringFormat=C2}" Width="140" FontWeight="Bold" ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- FOOTER: ACTIONS -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Extra Actions -->
            <Button Grid.Column="0" Command="{Binding UploadPdfCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="#757575" Foreground="#757575" Margin="0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="PDF FATURA OKU"/>
                </StackPanel>
            </Button>

            <!-- Right: Main Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Command="{Binding SaveOrderCommand}" Margin="0,0,16,0"
                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="#F57C00">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSaveEdit" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="TASLAK OLARAK KAYDET"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SaveAndReceiveCommand}" Height="50"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#1A237E" Foreground="White"
                        materialDesign:ButtonAssist.CornerRadius="25">
                    <StackPanel Orientation="Horizontal" Margin="16,0">
                        <materialDesign:PackIcon Kind="CheckBold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="ONAYLA VE STOKLARA İŞLE" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
