<UserControl x:Class="KamatekCrm.Views.PurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- HEADER -->
            <RowDefinition Height="Auto"/> <!-- MANUAL ENTRY -->
            <RowDefinition Height="*"/>    <!-- ITEM LIST -->
            <RowDefinition Height="Auto"/> <!-- FOOTER -->
        </Grid.RowDefinitions>

        <!-- HEADER: Supplier Selection -->
        <Border Grid.Row="0" Margin="0,0,0,10" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Tedarikçi Seçimi:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" 
                          DisplayMemberPath="CompanyName" VerticalAlignment="Center" Padding="5"/>
                
                <Button Grid.Column="3" Command="{Binding CreateOrderCommand}" Content="TEMİZLE / YENİ"
                         Style="{StaticResource ModernButton}" Background="#0288D1" Foreground="White" Width="120"/>
            </Grid>
        </Border>

        <!-- MANUAL ENTRY PANEL -->
        <GroupBox Grid.Row="1" Header="Ürün Ekleme" Margin="0,0,0,10" BorderBrush="#1A237E" Background="White" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>     <!-- Product -->
                    <ColumnDefinition Width="100"/>   <!-- Qty -->
                    <ColumnDefinition Width="120"/>   <!-- Price -->
                    <ColumnDefinition Width="150"/>   <!-- Button -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Ürün" Foreground="Gray" Margin="0,0,0,2"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Miktar" Foreground="Gray" Margin="0,0,0,2"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Birim Fiyat" Foreground="Gray" Margin="0,0,0,2"/>

                <!-- Inputs -->
                <ComboBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding ProductList}" SelectedItem="{Binding SelectedProduct}"
                          DisplayMemberPath="ProductName" Margin="0,0,5,0" Padding="5"/>
                
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Quantity}" TextAlignment="Center" Margin="0,0,5,0" Padding="5"/>
                
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding UnitPrice, StringFormat=N2}" TextAlignment="Right" Margin="0,0,5,0" Padding="5"/>

                <Button Grid.Row="1" Grid.Column="3" Command="{Binding AddManualItemCommand}" Content="EKLE"
                        Style="{StaticResource ModernButton}" Background="#2E7D32" Foreground="White" FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <!-- ITEMS LIST -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding CurrentOrderItems}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" Background="White" BorderThickness="1" BorderBrush="#DDD" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ürün Adı" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Miktar" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Birim Fiyat" Binding="{Binding UnitPrice, StringFormat=C2}" Width="120"/>
                <DataGridTextColumn Header="Toplam" Binding="{Binding LineTotal, StringFormat=C2}" Width="120" FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FOOTER: ACTIONS -->
        <Border Grid.Row="4" Margin="0,10,0,0" Padding="10" Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="1">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding UploadPdfCommand}" Content="PDF YÜKLE" Margin="0,0,10,0" Width="120"
                            Style="{StaticResource ModernButton}" Background="#757575" Foreground="White"/>
                    
                    <Button Command="{Binding SaveOrderCommand}" Content="TASLAK KAYDET" Width="140" Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}" Background="#F57C00" Foreground="White" FontWeight="Bold"/>

                    <Button Command="{Binding SaveAndReceiveCommand}" Content="KAYDET VE STOKLARA İŞLE" Width="220"
                            Style="{StaticResource ModernButton}" Background="#1A237E" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
