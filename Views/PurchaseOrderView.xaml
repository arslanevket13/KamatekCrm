<UserControl x:Class="KamatekCrm.Views.PurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="#1a1a2e">
    
    <UserControl.DataContext>
        <vm:PurchaseOrderViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Suppliers -->
        <Border Grid.Column="0" Background="#252541" Margin="10">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ TedarikÃ§iler" FontSize="18" FontWeight="Bold" Foreground="White" 
                           Margin="15,15,15,5"/>
                
                <!-- Toplam BorÃ§ -->
                <Border Background="#E74C3C" CornerRadius="8" Margin="15,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Toplam BorÃ§ (TedarikÃ§ilere)" Foreground="White" FontSize="11" Opacity="0.8"/>
                        <TextBlock Text="{Binding TotalSupplierDebt, StringFormat='â‚º{0:N2}'}" 
                                   Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- TedarikÃ§i Listesi -->
                <ListBox ItemsSource="{Binding Suppliers}"
                         SelectedItem="{Binding SelectedSupplier}"
                         Background="Transparent" BorderThickness="0"
                         Margin="10,5" MaxHeight="400">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" Margin="2" Background="#2d2d52" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="{Binding CompanyName}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Foreground="#888">
                                        <Run Text="BorÃ§: â‚º"/>
                                        <Run Text="{Binding Balance, StringFormat='{}{0:N2}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Yeni TedarikÃ§i Ekle -->
                <StackPanel Margin="15,10">
                    <TextBlock Text="Yeni TedarikÃ§i / PO" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSupplierName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10" Background="#1a1a2e" Foreground="White" BorderThickness="1"
                             BorderBrush="#444"/>
                    <Button Content="âž• TedarikÃ§i Ekle" Command="{Binding AddSupplierCommand}"
                            Background="#3498db" Foreground="White" Margin="0,5,0,0"
                            Padding="10,8" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Panel: Purchase Orders -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ“‹ SatÄ±n Alma Emirleri" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ”„ Yenile" Command="{Binding RefreshCommand}"
                            Background="#3498db" Foreground="White" Padding="12,8" 
                            Margin="5,0" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="âž• Yeni PO OluÅŸtur" Command="{Binding CreateOrderCommand}"
                            Background="#27ae60" Foreground="White" Padding="12,8" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- New PO Form -->
            <Border Grid.Row="1" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Tahmini Teslimat" Foreground="#888" FontSize="11"/>
                        <DatePicker SelectedDate="{Binding ExpectedDate}" Width="150" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0" Width="300">
                        <TextBlock Text="Notlar" Foreground="#888" FontSize="11"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" Background="#1a1a2e" Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Orders DataGrid -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding PurchaseOrders}"
                      SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="#252541" Foreground="White"
                      GridLinesVisibility="Horizontal" BorderThickness="0"
                      RowBackground="#252541" AlternatingRowBackground="#2d2d52"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PO No" Binding="{Binding PONumber}" Width="120"/>
                    <DataGridTextColumn Header="TedarikÃ§i" Binding="{Binding SupplierName}" Width="*"/>
                    <DataGridTextColumn Header="Durum" Binding="{Binding StatusDisplay}" Width="140"/>
                    <DataGridTextColumn Header="Tarih" Binding="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                    <DataGridTextColumn Header="Beklenen" Binding="{Binding ExpectedDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                    <DataGridTextColumn Header="Tutar" Binding="{Binding TotalAmount, StringFormat='â‚º{0:N2}'}" Width="100"/>
                    <DataGridTemplateColumn Header="Ä°ÅŸlem" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="âœ… Teslim Al" 
                                            Command="{Binding DataContext.ReceiveGoodsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#27ae60" Foreground="White" 
                                            Padding="8,4" Margin="2" BorderThickness="0"
                                            FontSize="11" Cursor="Hand"/>
                                    <Button Content="âŒ Ä°ptal" 
                                            Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#e74c3c" Foreground="White" 
                                            Padding="8,4" Margin="2" BorderThickness="0"
                                            FontSize="11" Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="YÃ¼kleniyor..." FontSize="24" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
