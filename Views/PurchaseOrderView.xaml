<UserControl x:Class="KamatekCrm.Views.PurchaseOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="#1a1a2e">
    
    <UserControl.DataContext>
        <vm:PurchaseOrderViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Suppliers -->
        <Border Grid.Column="0" Background="#252541" Margin="10">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ TedarikÃ§iler" FontSize="18" FontWeight="Bold" Foreground="White" 
                           Margin="15,15,15,5"/>
                
                <!-- Toplam BorÃ§ -->
                <Border Background="#E74C3C" CornerRadius="8" Margin="15,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Toplam BorÃ§ (TedarikÃ§ilere)" Foreground="White" FontSize="11" Opacity="0.8"/>
                        <TextBlock Text="{Binding TotalSupplierDebt, StringFormat='â‚º{0:N2}'}" 
                                   Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- TedarikÃ§i Listesi -->
                <ListBox ItemsSource="{Binding Suppliers}"
                         SelectedItem="{Binding SelectedSupplier}"
                         Background="Transparent" BorderThickness="0"
                         Margin="10,5" MaxHeight="400">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,8" Margin="2" Background="#2d2d52" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="{Binding CompanyName}" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Foreground="#888">
                                        <Run Text="BorÃ§: â‚º"/>
                                        <Run Text="{Binding Balance, StringFormat='{}{0:N2}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Yeni TedarikÃ§i Ekle -->
                <StackPanel Margin="15,10">
                    <TextBlock Text="Yeni TedarikÃ§i / PO" Foreground="#888" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewSupplierName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10" Background="#1a1a2e" Foreground="White" BorderThickness="1"
                             BorderBrush="#444"/>
                    <Button Content="âž• TedarikÃ§i Ekle" Command="{Binding AddSupplierCommand}"
                            Background="#3498db" Foreground="White" Margin="0,5,0,0"
                            Padding="10,8" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Panel: Purchase Orders -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="ðŸ“‹ SatÄ±n Alma Emirleri" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ”„ Yenile" Command="{Binding RefreshCommand}"
                            Background="#3498db" Foreground="White" Padding="12,8" 
                            Margin="5,0" BorderThickness="0" Cursor="Hand"/>
                    <Button Content="âž• Yeni PO OluÅŸtur" Command="{Binding CreateOrderCommand}"
                            Background="#27ae60" Foreground="White" Padding="12,8" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- New PO Form -->
            <Border Grid.Row="1" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Tahmini Teslimat" Foreground="#888" FontSize="11"/>
                        <DatePicker SelectedDate="{Binding ExpectedDate}" Width="150" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0" Width="300">
                        <TextBlock Text="Notlar" Foreground="#888" FontSize="11"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" Background="#1a1a2e" Foreground="White" 
                                 BorderThickness="1" BorderBrush="#444" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <DataGrid Grid.Row="2" ItemsSource="{Binding PurchaseOrders}"
                      SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="#252541" Foreground="White"
                      GridLinesVisibility="Horizontal" BorderThickness="0"
                      RowBackground="#252541" AlternatingRowBackground="#2d2d52"
                      HeadersVisibility="Column"
                      MaxHeight="200"
                      Margin="0,0,0,15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PO No" Binding="{Binding PONumber}" Width="100"/>
                    <DataGridTextColumn Header="TedarikÃ§i" Binding="{Binding SupplierName}" Width="*"/>
                    <DataGridTextColumn Header="Durum" Binding="{Binding StatusDisplay}" Width="100"/>
                    <DataGridTextColumn Header="Tarih" Binding="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="85"/>
                    <DataGridTextColumn Header="Tutar" Binding="{Binding TotalAmount, StringFormat='â‚º{0:N2}'}" Width="90"/>
                    <DataGridTemplateColumn Header="Ä°ÅŸlem" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="âœ… Teslim Al" 
                                            Command="{Binding DataContext.ReceiveGoodsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#27ae60" Foreground="White" 
                                            Padding="6,3" Margin="2" BorderThickness="0"
                                            FontSize="10" Cursor="Hand"/>
                                    <Button Content="âŒ Ä°ptal" 
                                            Command="{Binding DataContext.CancelOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="#e74c3c" Foreground="White" 
                                            Padding="6,3" Margin="2" BorderThickness="0"
                                            FontSize="10" Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Order Details / Items Panel -->
            <Border Grid.Row="3" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                    Visibility="{Binding SelectedOrder, Converter={StaticResource NullToVis}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Item Bar -->
                    <Border Grid.Row="0" Margin="0,0,0,10" Padding="0,0,0,10" BorderBrush="#3d3d5c" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding Products}" 
                                      SelectedItem="{Binding SelectedProductToAdd}" 
                                      DisplayMemberPath="ProductName"
                                      Width="200" Margin="0,0,10,0"/>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Adet:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding QuantityToAdd}" Width="50" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Birim Fiyat:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding UnitPriceToAdd}" Width="70" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="KDV %:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding TaxRateToAdd}" Width="40" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>
                            
                             <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                <TextBlock Text="Ä°skonto %:" Foreground="#aaa" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding DiscountRateToAdd}" Width="40" Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                            </StackPanel>

                            <Button Content="âž• Ekle" Command="{Binding AddOrderItemCommand}"
                                    Background="#3498db" Foreground="White" Padding="15,6" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Border>

                    <!-- Items List -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedOrder.Items}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              Background="Transparent" Foreground="White"
                              GridLinesVisibility="Horizontal" BorderThickness="0"
                              RowBackground="#252541" AlternatingRowBackground="#2d2d52"
                              HeadersVisibility="Column"
                              MinHeight="150" MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ÃœrÃ¼n" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Miktar" Binding="{Binding Quantity}" Width="60"/>
                            <DataGridTextColumn Header="Birim Fiyat" Binding="{Binding UnitPrice, StringFormat='â‚º{0:N2}'}" Width="90"/>
                            <DataGridTextColumn Header="KDV" Binding="{Binding TaxAmount, StringFormat='â‚º{0:N2}'}" Width="80"/>
                            <DataGridTextColumn Header="Ä°skonto" Binding="{Binding DiscountAmount, StringFormat='â‚º{0:N2}'}" Width="80"/>
                            <DataGridTextColumn Header="Toplam" Binding="{Binding LineTotal, StringFormat='â‚º{0:N2}'}" Width="90" FontWeight="Bold"/>
                            <DataGridTemplateColumn Header="Sil" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="TRASH" 
                                                Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" Foreground="#e74c3c"
                                                BorderThickness="0" Padding="5" Cursor="Hand">
                                             <Button.ContentTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="ðŸ—‘ï¸"/>
                                                </DataTemplate>
                                            </Button.ContentTemplate>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Invoice & File Upload Section -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Fatura / Belge No:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Text="{Binding SelectedOrder.SupplierReferenceNo}" Width="150" 
                                     Padding="5" Background="#1a1a2e" Foreground="White" BorderThickness="1" BorderBrush="#555"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="{Binding SelectedOrder.InvoiceDocumentPath}" 
                                   Foreground="#aaa" VerticalAlignment="Center" Margin="15,0" 
                                   TextTrimming="CharacterEllipsis" FontStyle="Italic"/>

                        <Button Grid.Column="2" Content="ðŸ“ Fatura YÃ¼kle" Command="{Binding UploadInvoiceCommand}"
                                Background="#f39c12" Foreground="White" Padding="15,6" BorderThickness="0" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Order Summary Footer -->
            <Border Grid.Row="4" Background="#252541" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="SeÃ§ili sipariÅŸ Ã¶zeti (kalem detaylarÄ± iÃ§in sipariÅŸi geniÅŸletin)" 
                               Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Ara Toplam -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Ara Toplam" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderSubTotal, StringFormat='â‚º{0:N2}'}" 
                                           Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Ä°ndirim -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Ä°ndirim" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderDiscountAmount, StringFormat='-â‚º{0:N2}'}" 
                                           Foreground="#E74C3C" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- KDV -->
                        <Border Background="#1a1a2e" CornerRadius="6" Padding="12,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="KDV" Foreground="#888" FontSize="10"/>
                                <TextBlock Text="{Binding OrderTaxAmount, StringFormat='+â‚º{0:N2}'}" 
                                           Foreground="#3498db" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Genel Toplam -->
                        <Border Background="#27ae60" CornerRadius="6" Padding="15,8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="GENEL TOPLAM" Foreground="White" FontSize="10" Opacity="0.8"/>
                                <TextBlock Text="{Binding OrderGrandTotal, StringFormat='â‚º{0:N2}'}" 
                                           Foreground="White" FontSize="16" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="YÃ¼kleniyor..." FontSize="24" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
