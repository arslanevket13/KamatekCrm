<UserControl x:Class="KamatekCrm.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="500" Width="900">

    

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol: Liste -->
        <DataGrid Grid.Column="0"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,12,0"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Ad" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Soyad" Binding="{Binding Surname}" Width="*"/>
                <DataGridTextColumn Header="E-posta" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Sağ: Form -->
        <StackPanel Grid.Column="1" Margin="0,0,0,0">
            <TextBlock Text="Müşteri Bilgileri" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Name -->
            <TextBox Text="{Binding NewOrEditCustomer.Name, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Ad"
                     Margin="0,4"/>

            <!-- Surname -->
            <TextBox Text="{Binding NewOrEditCustomer.Surname, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Soyad"
                     Margin="0,4"/>

            <!-- Email -->
            <TextBox Text="{Binding NewOrEditCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="E-posta"
                     Margin="0,4"/>

            <!-- Phone -->
            <TextBox Text="{Binding NewOrEditCustomer.Phone, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Telefon"
                     Margin="0,4"/>

            <!-- Butonlar -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Ekle" Command="{Binding AddCommand}" Width="90" Margin="0,0,8,0"/>
                <Button Content="Güncelle" Command="{Binding UpdateCommand}" Width="90" Margin="0,0,8,0"/>
                <Button Content="Sil" Command="{Binding DeleteCommand}" Width="90" Margin="0,0,8,0"/>
                <Button Content="İptal" Command="{Binding CancelCommand}" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
