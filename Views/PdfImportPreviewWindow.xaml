<Window x:Class="KamatekCrm.Views.PdfImportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDF Fatura Önizleme ve Düzenleme" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PDF'ten Okunan Kalemler" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1A237E"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding ParsedItems}" AutoGenerateColumns="False" 
                  CanUserAddRows="False" BorderThickness="1" BorderBrush="#DDD"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ürün Adı" Binding="{Binding ProductName}" Width="*" />
                <DataGridTextColumn Header="Miktar" Binding="{Binding Quantity}" Width="100" />
                <DataGridTextColumn Header="Birim Fiyat" Binding="{Binding UnitPrice, StringFormat=N2}" Width="120" />
                <DataGridTextColumn Header="Toplam" Binding="{Binding LineTotal, StringFormat=N2}" Width="120" IsReadOnly="True" />
                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}"
                                    Content="SİL" Background="#D32F2F" Foreground="White" Padding="5,2" BorderThickness="0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="İPTAL" Width="100" Margin="0,0,10,0"
                    Background="Gray" Foreground="White" FontWeight="Bold" Height="35"/>
            
            <Button Command="{Binding ConfirmCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="ONAYLA VE LİSTEYE EKLE" Width="200"
                    Background="#2E7D32" Foreground="White" FontWeight="Bold" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
