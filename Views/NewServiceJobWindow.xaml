                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayName}"
                                                     IsChecked="{Binding IsSelected}"
                                                     Margin="0,4,16,4"
