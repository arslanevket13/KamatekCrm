                        <StackPanel>
                            <ComboBox ItemsSource="{Binding Products}"
                                     SelectedItem="{Binding SelectedProductToAdd}"
                                     DisplayMemberPath="ProductName"
                                     Style="{StaticResource ModernComboBox}"
                                     TabIndex="6"
                                     Height="34"
                                     Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
