                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Ã–ncelik -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
