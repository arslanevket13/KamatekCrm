<UserControl x:Class="KamatekCrm.Views.CustomerDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KamatekCrm.Views"
             xmlns:viewmodels="clr-namespace:KamatekCrm.ViewModels"
             xmlns:enums="clr-namespace:KamatekCrm.Enums"
             xmlns:helpers="clr-namespace:KamatekCrm.Helpers"
             d:DataContext="{d:DesignInstance Type=viewmodels:CustomerDetailViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource BackgroundColor}">

    <UserControl.Resources>
        <helpers:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== TOP BAR (Navigation) ========== -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Button Content="â† Geri" Command="{Binding BackCommand}" 
                    Style="{StaticResource SecondaryButton}" Padding="12,6" HorizontalAlignment="Left"/>
        </Grid>

        <!-- ========== HEADER DASHBOARD ========== -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar & Basic Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Avatar Placeholder -->
                    <Border Width="64" Height="64" CornerRadius="32" Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2" Margin="0,0,16,0">
                        <TextBlock Text="ðŸ‘¤" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding FullName}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryColor}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CompanyName}" FontSize="14" Foreground="{StaticResource TextSecondaryColor}"
                                       Visibility="{Binding CustomerType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Corporate}"/>
                            <Border Background="#E0F7FA" CornerRadius="4" Padding="6,2" Margin="8,0,0,0">
                                <TextBlock Text="{Binding CustomerCode}" FontSize="11" FontWeight="SemiBold" Foreground="#006064"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding City}" FontSize="12" Foreground="{StaticResource TextSecondaryColor}" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Balance Widget -->
                <Border Grid.Column="2" Background="#FAFAFA" CornerRadius="8" Padding="20,10" BorderBrush="#EEEEEE" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Right">
                        <TextBlock Text="GÃœNCEL BAKÄ°YE" FontSize="11" Foreground="#757575" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalBalance, StringFormat=c2}" 
                                   FontSize="28" FontWeight="Bold" 
                                   Foreground="{Binding BalanceColor}" 
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalSpent, StringFormat='Toplam Harcama: {0:c2}'}" 
                                   FontSize="11" Foreground="#9E9E9E" HorizontalAlignment="Right" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ========== TABS ========== -->
        <TabControl Grid.Row="2" Style="{StaticResource {x:Type TabControl}}">
            
            <!-- TAB 1: FINANCIALS (Cari Hesap) -->
            <TabItem Header="ðŸ’° Finans (Cari)">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Actions Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16" HorizontalAlignment="Right">
                        <Button Content="âž• Tahsilat Al" Command="{Binding AddPaymentCommand}"
                                Background="#dcedc8" Foreground="#33691E" BorderThickness="0"
                                Padding="15,8" FontSize="13" FontWeight="SemiBold" Cursor="Hand" Margin="0,0,10,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="âž– BorÃ§ Ekle" Command="{Binding AddDebtCommand}"
                                Background="#ffccbc" Foreground="#BF360C" BorderThickness="0"
                                Padding="15,8" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <!-- Transactions Grid -->
                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Transactions}"
                              Style="{StaticResource ModernDataGrid}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              RowHeight="45"
                              AlternatingRowBackground="#FAFAFA"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EEEEEE">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tarih" Binding="{Binding Date, StringFormat=dd.MM.yyyy HH:mm}" Width="140" Foreground="#616161"/>
                            
                            <DataGridTemplateColumn Header="Ä°ÅŸlem TÃ¼rÃ¼" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Payment}">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Debt}">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Payment}">
                                                                <Setter Property="Text" Value="â¬‡ï¸ Tahsilat"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Debt}">
                                                                <Setter Property="Text" Value="â¬†ï¸ BorÃ§"/>
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="AÃ§Ä±klama" Binding="{Binding Description}" Width="*" Foreground="#424242"/>
                            
                            <DataGridTextColumn Header="Tutar" Binding="{Binding Amount, StringFormat=c2}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Payment}">
                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="{x:Static enums:TransactionType.Debt}">
                                                <Setter Property="Foreground" Value="#C62828"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 2: SERVICE HISTORY -->
            <TabItem Header="ðŸ”§ Servis GeÃ§miÅŸi">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0" Content="ðŸ› ï¸ Yeni Servis KaydÄ± AÃ§" 
                            Command="{Binding NewServiceJobCommand}"
                            Style="{StaticResource ModernButton}" HorizontalAlignment="Right" Margin="0,0,0,16"/>

                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding ServiceJobs}"
                              Style="{StaticResource ModernDataGrid}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              RowHeight="50"
                              AlternatingRowBackground="#FAFAFA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Tarih" Binding="{Binding CreatedDate, StringFormat=dd.MM.yyyy}" Width="90"/>
                            
                            <DataGridTemplateColumn Header="Durum" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Pending}">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.InProgress}">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Completed}">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Cancelled}">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontWeight="SemiBold" FontSize="11">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Pending}">
                                                                <Setter Property="Text" Value="BEKLÄ°YOR"/>
                                                                <Setter Property="Foreground" Value="#EF6C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.InProgress}">
                                                                <Setter Property="Text" Value="Ä°ÅžLEMDE"/>
                                                                <Setter Property="Foreground" Value="#1565C0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Completed}">
                                                                <Setter Property="Text" Value="TAMAMLANDI"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static enums:JobStatus.Cancelled}">
                                                                <Setter Property="Text" Value="Ä°PTAL"/>
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Kategori" Binding="{Binding JobCategory}" Width="120" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="AÃ§Ä±klama" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Tutar" Binding="{Binding Price, StringFormat=c2}" Width="100" FontWeight="Bold" Foreground="#424242"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 3: SALES HISTORY -->
            <TabItem Header="ðŸ›’ SatÄ±n Almalar">
                <Grid Margin="16">
                    <DataGrid AutoGenerateColumns="False"
                              ItemsSource="{Binding SalesOrders}"
                              Style="{StaticResource ModernDataGrid}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              RowHeight="45"
                              AlternatingRowBackground="#FAFAFA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="SatÄ±ÅŸ No" Binding="{Binding OrderNumber}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Tarih" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                             <DataGridTemplateColumn Header="StatÃ¼" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Toplam Tutar" Binding="{Binding TotalAmount, StringFormat=c2}" Width="120" FontWeight="Bold" Foreground="#2E7D32"/>
                            <DataGridTextColumn Header="Ã–deme Tipi" Binding="{Binding PaymentMethod}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock Text="HenÃ¼z satÄ±ÅŸ kaydÄ± bulunmamaktadÄ±r." 
                               Visibility="{Binding SalesOrders.Count, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#BDBDBD" FontSize="16"/>
                </Grid>
            </TabItem>

            <!-- TAB 4: PROFILE INFO -->
            <TabItem Header="ðŸ“‹ Genel Bilgiler">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer Type -->
                        <Border Grid.Row="0" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="MÃ¼ÅŸteri Tipi" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Bireysel" 
                                                 IsChecked="{Binding CustomerType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Individual, Mode=OneWay}"
                                                 Checked="OnIndividualChecked"
                                                 GroupName="CustomerType" 
                                                 Margin="0,0,24,0"/>
                                    <RadioButton Content="Kurumsal" 
                                                 IsChecked="{Binding CustomerType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Corporate, Mode=OneWay}"
                                                 Checked="OnCorporateChecked"
                                                 GroupName="CustomerType"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Individual Fields -->
                        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16"
                                Visibility="{Binding CustomerType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Individual}">
                            <StackPanel>
                                <TextBlock Text="Bireysel MÃ¼ÅŸteri Bilgileri" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,12"/>
                                <Label Content="TC Kimlik No" Style="{StaticResource ModernLabel}"/>
                                <TextBox Text="{Binding TcKimlikNo, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}" MaxLength="11" Width="200" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>

                        <!-- Corporate Fields -->
                        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16"
                                Visibility="{Binding CustomerType, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Corporate}">
                            <StackPanel>
                                <TextBlock Text="Kurumsal MÃ¼ÅŸteri Bilgileri" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Label Content="Åžirket ÃœnvanÄ±" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <Label Content="Vergi NumarasÄ±" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding TaxNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="4">
                                        <Label Content="Vergi Dairesi" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding TaxOffice, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Contact Info -->
                        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Ä°letiÅŸim Bilgileri" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <Label Content="Ad Soyad *" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <Label Content="Telefon *" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="4">
                                        <Label Content="E-posta" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Address Info -->
                        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Adres Bilgileri" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <Label Content="Åžehir *" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2">
                                        <Label Content="Ä°lÃ§e" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding District, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="4">
                                        <Label Content="Mahalle" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding Neighborhood, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,0,0">
                                        <Label Content="Sokak/Cadde" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,12,0,0">
                                        <Label Content="Bina No" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding BuildingNo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,12,0,0">
                                        <Label Content="Daire No" Style="{StaticResource ModernLabel}"/>
                                        <TextBox Text="{Binding ApartmentNo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Notes -->
                        <Border Grid.Row="4" Style="{StaticResource CardPanel}" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <Label Content="Notlar" Style="{StaticResource ModernLabel}"/>
                                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}"
                                         TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Border>

                        <!-- Save Button -->
                        <Button Grid.Row="5" Content="ðŸ’¾ DeÄŸiÅŸiklikleri Kaydet" 
                                Command="{Binding SaveCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Width="200" Height="44"
                                HorizontalAlignment="Right"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
