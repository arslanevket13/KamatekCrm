<UserControl x:Class="KamatekCrm.Views.ServiceJobsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KamatekCrm.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== MERKEZ İÇERİK ========== -->
        <Border Style="{StaticResource CardPanel}" 
                Margin="40" 
                MaxWidth="600" 
                MaxHeight="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <!-- Icon -->
                <TextBlock Text="🔧" 
                           FontSize="64" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                
                <!-- Başlık -->
                <TextBlock Text="Yeni İş Emri Oluştur" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                
                <!-- Açıklama -->
                <TextBlock Text="Müşteri için yeni servis, kurulum veya bakım işi kaydı oluşturun." 
                           FontSize="14" 
                           Foreground="{StaticResource TextSecondaryColor}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- Yeni İş Emri Butonu -->
                <Button Content="➕ Yeni İş Emri Aç"
                        Style="{StaticResource ModernButton}"
                        Command="{Binding OpenNewJobFormCommand}"
                        Height="50"
                        Width="220"
                        FontSize="16"
                        FontWeight="SemiBold"/>
                
                <!-- Yönlendirme Bilgisi -->
                <TextBlock Margin="0,30,0,0" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center">
                    <Run Text="💡 İpucu:" FontWeight="SemiBold" Foreground="#FF9800"/>
                    <LineBreak/>
                    <Run Text="Mevcut işleri görüntülemek için sidebar'dan" Foreground="{StaticResource TextSecondaryColor}"/>
                    <LineBreak/>
                    <Run Text="'🔧 Tamir Listesi' veya '🚜 Saha İşleri' kullanın." Foreground="{StaticResource TextSecondaryColor}"/>
                </TextBlock>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
