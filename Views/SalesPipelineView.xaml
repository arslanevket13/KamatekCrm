<UserControl x:Class="KamatekCrm.Views.SalesPipelineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="#F5F5F5">

    <!-- Context provided by MainContentViewModel via DataTemplate -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="SatÄ±ÅŸ Boru HattÄ± ðŸ“Š" FontSize="24" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20"/>

        <!-- Kanban Columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. Lead -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#CFD8DC" Height="4" VerticalAlignment="Top" CornerRadius="2"/>
                    <TextBlock Text="YENÄ° FIRSAT" FontWeight="Bold" Foreground="#607D8B" Margin="0,10,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Leads}" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#ECEFF1" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Customer.FullName}" FontSize="11" Foreground="#546E7A"/>
                                        <TextBlock Text="{Binding TotalCost, StringFormat={}{0:C2}}" 
                                                   FontSize="11" FontWeight="Bold" Foreground="#607D8B" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 2. Quoted -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#64B5F6" Height="4" VerticalAlignment="Top" CornerRadius="2"/>
                    <TextBlock Text="TEKLÄ°F VERÄ°LDÄ°" FontWeight="Bold" Foreground="#1976D2" Margin="0,10,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Quoted}" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E3F2FD" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Customer.FullName}" FontSize="11" Foreground="#546E7A"/>
                                        <TextBlock Text="{Binding TotalCost, StringFormat={}{0:C2}}" 
                                                   FontSize="11" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 3. Negotiating -->
            <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#FFB74D" Height="4" VerticalAlignment="Top" CornerRadius="2"/>
                    <TextBlock Text="GÃ–RÃœÅžÃœLÃœYOR" FontWeight="Bold" Foreground="#F57C00" Margin="0,10,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Negotiating}" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF3E0" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Customer.FullName}" FontSize="11" Foreground="#546E7A"/>
                                        <TextBlock Text="{Binding TotalCost, StringFormat={}{0:C2}}" 
                                                   FontSize="11" FontWeight="Bold" Foreground="#E65100" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 4. Won -->
            <Border Grid.Column="6" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#81C784" Height="4" VerticalAlignment="Top" CornerRadius="2"/>
                    <TextBlock Text="KAZANILDI" FontWeight="Bold" Foreground="#388E3C" Margin="0,10,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Won}" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E9" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Customer.FullName}" FontSize="11" Foreground="#546E7A"/>
                                        <TextBlock Text="TAMAMLANDI" FontSize="10" Foreground="#388E3C" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 5. Lost -->
            <Border Grid.Column="8" Background="White" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Background="#E57373" Height="4" VerticalAlignment="Top" CornerRadius="2"/>
                    <TextBlock Text="KAYBEDÄ°LDÄ°" FontWeight="Bold" Foreground="#D32F2F" Margin="0,10,0,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Lost}" 
                             dd:DragDrop.IsDragSource="True"
                             dd:DragDrop.IsDropTarget="True"
                             dd:DragDrop.DropHandler="{Binding}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFEBEE" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextWrapping="Wrap" Foreground="#B71C1C"/>
                                        <TextBlock Text="{Binding Customer.FullName}" FontSize="11" Foreground="#546E7A"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
