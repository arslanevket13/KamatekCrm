<UserControl x:Class="KamatekCrm.Views.RepairListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             xmlns:enums="clr-namespace:KamatekCrm.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance vm:RepairListViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/> 
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Background="White">
            <StackPanel>
                 <!-- Filtre BÃ¶lÃ¼mÃ¼ -->
                 <StackPanel Margin="15,15,15,10">
                     <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                              Style="{StaticResource ModernTextBox}" 
                              Height="32"/>
                 </StackPanel>
                 
                 <!-- Testing ListBox -->
                 <ListBox ItemsSource="{Binding FilteredRepairJobs}" 
                          SelectedItem="{Binding SelectedDisplayItem, Mode=TwoWay}"
                          BorderThickness="0" Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                     <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Name="Border" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15,12" Background="White">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="4,0,0,0"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#F9F9F9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                     </ListBox.ItemContainerStyle>
                     <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Width="36" Height="36" CornerRadius="18" Background="#F0F0F0" Margin="0,0,12,0">
                                    <TextBlock Text="ðŸ“¹" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" FontSize="13" Foreground="#333"/>
                                    <TextBlock FontSize="12" Foreground="#607D8B" Margin="0,2">
                                        <Run Text="{Binding DeviceBrand, Mode=OneWay}"/> <Run Text="{Binding DeviceModel, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <Border Background="{Binding StatusBgColor}" CornerRadius="4" Padding="6,2">
                                        <TextBlock Text="{Binding StatusDisplay}" FontSize="10" FontWeight="SemiBold" Foreground="{Binding StatusColor}"/>
                                    </Border>
                                    <TextBlock Text="{Binding CreatedDate, StringFormat=dd.MM}" 
                                               FontSize="10" Foreground="#9E9E9E" 
                                               HorizontalAlignment="Right" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                     </ListBox.ItemTemplate>
                 </ListBox>
            </StackPanel>
        </Border>

        <!-- Right Panel -->
        <Grid Grid.Column="1" Visibility="{Binding IsJobSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="*"/>    
            </Grid.RowDefinitions>

            <!-- Header Card (Simplified) -->
            <Border Background="White" Padding="20" Margin="20,20,20,10" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="60" Height="60" Background="#E8F5E9" CornerRadius="8" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ‘¤" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedJob.Customer.FullName}" FontSize="20" FontWeight="Bold" Foreground="#2E7D32"/>
                         <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                 <TextBlock FontSize="12" Foreground="#F57F17">
                                     <Run Text="Marka:"/> <Run Text="{Binding SelectedJob.DeviceBrand, Mode=OneWay}" FontWeight="SemiBold"/>
                                 </TextBlock>
                         </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding SelectedJob.Id, StringFormat='#TK-{0:D5}'}" 
                                   FontSize="24" FontWeight="Bold" Foreground="#CFD8DC" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Details & Actions -->
            <TabControl Grid.Row="1" Margin="20,0,20,20" Background="Transparent" BorderThickness="0">
                <TabItem Header="DURUM &amp; Ä°ÅžLEMLER" FontSize="13" FontWeight="SemiBold">
                    <Grid Background="White" Margin="0,5,0,0">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="2*"/>
                             <ColumnDefinition Width="1.2*"/>
                         </Grid.ColumnDefinitions>
                         
                         <ScrollViewer Grid.Column="0" Padding="20">
                             <StackPanel>
                                 <TextBlock Text="ArÄ±za BeyanÄ±" FontWeight="Bold" Foreground="#455A64" Margin="0,0,0,5"/>
                                 <TextBox Text="{Binding SelectedJob.Description}" IsReadOnly="True" 
                                          Background="#FAFAFA" BorderThickness="0" Padding="10" TextWrapping="Wrap" MinHeight="60"/>
                                 
                                 <TextBlock Text="Ä°ÅŸlem GeÃ§miÅŸi (Timeline)" FontWeight="Bold" Foreground="#455A64" Margin="0,20,0,10"/>
                                 <ItemsControl ItemsSource="{Binding JobHistory}">
                                     <ItemsControl.ItemTemplate>
                                         <DataTemplate>
                                             <Grid Margin="0,0,0,15">
                                                 <Grid.ColumnDefinitions>
                                                     <ColumnDefinition Width="15"/>
                                                     <ColumnDefinition Width="*"/>
                                                 </Grid.ColumnDefinitions>
                                                 <Border Grid.Column="0" Width="2" Background="#E0E0E0" HorizontalAlignment="Center"/>
                                                 <Border Grid.Column="0" Width="10" Height="10" CornerRadius="5" Background="#2196F3" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                                 
                                                 <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="6" Padding="10" Margin="10,0,0,0">
                                                     <StackPanel>
                                                         <StackPanel Orientation="Horizontal">
                                                             <TextBlock Text="{Binding StatusChange}" FontWeight="Bold" FontSize="12"/>
                                                             <TextBlock Text=" â€¢ " Foreground="Gray"/>
                                                             <TextBlock Text="{Binding Date, StringFormat='dd.MM HH:mm'}" FontSize="11" Foreground="#757575"/>
                                                         </StackPanel>
                                                         <TextBlock Text="{Binding TechnicianNote}" FontSize="12" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                                         <TextBlock Text="{Binding UserId}" FontSize="10" Foreground="#9E9E9E" HorizontalAlignment="Right"/>
                                                     </StackPanel>
                                                 </Border>
                                             </Grid>
                                         </DataTemplate>
                                     </ItemsControl.ItemTemplate>
                                 </ItemsControl>
                             </StackPanel>
                         </ScrollViewer>
                         
                         <!-- SAÄž: AKSÄ°YONLAR -->
                         <Border Grid.Column="1" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Padding="20">
                             <StackPanel>
                                 <TextBlock Text="âš¡ HÄ±zlÄ± Aksiyonlar" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                                 
                                 <TextBlock Text="AtÃ¶lye SÃ¼reci" FontSize="11" Foreground="#90A4AE" Margin="0,5"/>
                                 <Separator Margin="0,0,0,5"/>
                                 <WrapPanel>
                                     <Button Content="ðŸ” Tespit" Command="{Binding UpdateStatusCommand}" 
                                             CommandParameter="{x:Static enums:RepairStatus.Diagnosing}"
                                             Margin="0,0,5,5" Padding="10,5"/>
                                     <Button Content="ðŸ”§ Tamir" Command="{Binding UpdateStatusCommand}" 
                                             CommandParameter="{x:Static enums:RepairStatus.InRepair}"
                                             Margin="0,0,5,5" Padding="10,5"/>
                                     <Button Content="âœ”ï¸ Test Ok" Command="{Binding UpdateStatusCommand}" 
                                             CommandParameter="{x:Static enums:RepairStatus.Testing}"
                                             Margin="0,0,5,5" Padding="10,5"/>
                                 </WrapPanel>
 
                                 <TextBlock Text="Fabrika SÃ¼reci (Diafon)" FontSize="11" Foreground="#90A4AE" Margin="0,15,0,5"/>
                                 <Separator Margin="0,0,0,5"/>
                                 <StackPanel>
                                     <Button Content="ðŸ­ FABRÄ°KAYA GÃ–NDER" Command="{Binding UpdateStatusCommand}" 
                                             CommandParameter="{x:Static enums:RepairStatus.SentToFactory}"
                                             Background="#7E57C2" Foreground="White" Margin="0,0,0,5" Height="30"/>
                                     <Button Content="ðŸ“¦ FABRÄ°KADAN GELDÄ°" Command="{Binding UpdateStatusCommand}" 
                                             CommandParameter="{x:Static enums:RepairStatus.ReturnedFromFactory}"
                                             Background="#5E35B1" Foreground="White" Margin="0,0,0,5" Height="30"/>
                                 </StackPanel>
                                 
                                 <TextBlock Text="Not Ekle" FontWeight="Bold" Margin="0,20,0,5"/>
                                 <TextBox Text="{Binding NewNoteText}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                                          Background="White" BorderBrush="#DDD" Padding="5"/>
                                 <Button Content="Not Kaydet" Command="{Binding AddNoteCommand}" HorizontalAlignment="Right" Margin="0,5,0,0" Width="80"/>
                                 
                                 <Button Content="âœ… TESLÄ°M ET / KAPAT" Command="{Binding CompleteJobCommand}" 
                                         Background="#2E7D32" Foreground="White" FontWeight="Bold" Height="40" Margin="0,30,0,0"/>
                             </StackPanel>
                         </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="MALZEME &amp; MALÄ°YET" FontSize="13" FontWeight="SemiBold">
                    <Grid Background="White" Margin="0,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- ParÃ§a Ekleme -->
                        <Border Padding="15" Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProductToAdd}" 
                                          DisplayMemberPath="ProductName" IsEditable="True" 
                                          ToolTip="ÃœrÃ¼n Ara..."/>
                                <TextBox Grid.Column="1" Text="{Binding QuantityToAdd}" Margin="5,0" ToolTip="Adet" TextAlignment="Center"/>
                                <TextBox Grid.Column="2" Text="{Binding UnitPriceToAdd}" Margin="5,0" ToolTip="Fiyat" TextAlignment="Right"/>
                                <Button Grid.Column="3" Content="EKLE" Command="{Binding AddItemToJobCommand}" Background="#4CAF50" Foreground="White"
                                        Style="{StaticResource ModernButton}" Height="30"/>
                            </Grid>
                        </Border>
                        
                        <!-- Liste -->
                        <DataGrid Grid.Row="1" ItemsSource="{Binding CurrentJobItems}" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" BorderThickness="0" Style="{StaticResource ModernDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ParÃ§a / Hizmet" Binding="{Binding Product.ProductName}" Width="*"/>
                                <DataGridTextColumn Header="Adet" Binding="{Binding QuantityUsed}" Width="60"/>
                                <DataGridTextColumn Header="Birim Fiyat" Binding="{Binding UnitPrice, StringFormat=C2}" Width="100"/>
                                <DataGridTextColumn Header="Toplam" Binding="{Binding TotalPrice, StringFormat=C2}" Width="100"/>
                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ—‘ï¸" Command="{Binding DataContext.RemoveItemFromJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" Background="Transparent" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Toplamlar -->
                        <Border Grid.Row="2" Background="#FFFDE7" Padding="20">
                            <StackPanel HorizontalAlignment="Right" Width="250">
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="Malzeme Toplam:" Foreground="#555"/>
                                    <TextBlock Text="{Binding MaterialTotal, StringFormat=C2}" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="Ä°ÅŸÃ§ilik:" Foreground="#555"/>
                                    <TextBox Text="{Binding SelectedJob.LaborCost, UpdateSourceTrigger=LostFocus}" Width="80" HorizontalAlignment="Right" TextAlignment="Right"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <TextBlock Text="Ä°ndirim:" Foreground="#D32F2F"/>
                                    <TextBox Text="{Binding SelectedJob.DiscountAmount, UpdateSourceTrigger=LostFocus}" Width="80" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#D32F2F"/>
                                </DockPanel>
                                <Separator Margin="0,10"/>
                                <DockPanel>
                                    <TextBlock Text="GENEL TOPLAM:" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding GrandTotal, StringFormat=C2}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" Foreground="#D32F2F"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                
                <TabItem Header="FOTOÄžRAFLAR" FontSize="13" FontWeight="SemiBold">
                    <Grid Background="White" Margin="0,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Button Content="+ FOTOÄžRAF EKLE" Command="{Binding AddPhotoCommand}" 
                                HorizontalAlignment="Left" Margin="20" Padding="15,8" Style="{StaticResource ModernButton}"/>
                                
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding SelectedJob.PhotoPathsList}" Margin="20">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.OpenPhotoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                            CommandParameter="{Binding}"
                                            Width="120" Height="120" Margin="0,0,10,10" Padding="0" Background="White" BorderBrush="#DDD">
                                        <Image Source="{Binding}" Stretch="UniformToFill"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <TextBlock Grid.Row="1" Text="HenÃ¼z fotoÄŸraf eklenmemiÅŸ." 
                                   Visibility="{Binding SelectedJob.HasPhotos, Converter={StaticResource InvertedBoolToVis}}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontSize="14"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- BoÅŸ Durum -->
        <Border Grid.Column="1" Background="White" Visibility="{Binding IsJobSelected, Converter={StaticResource InvertedBoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”§" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#CFD8DC"/>
                <TextBlock Text="Sol panelden bir iÅŸ seÃ§in" FontSize="16" Foreground="#9E9E9E"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
