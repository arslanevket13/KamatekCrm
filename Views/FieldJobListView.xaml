<UserControl x:Class="KamatekCrm.Views.FieldJobListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundColor}"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:FieldJobListViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- BaÅŸlÄ±k -->
            <RowDefinition Height="Auto"/>  <!-- Kategori Toggles -->
            <RowDefinition Height="Auto"/>  <!-- Filtre Bar -->
            <RowDefinition Height="*"/>     <!-- DataGrid -->
            <RowDefinition Height="Auto"/>  <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ===== BAÅžLIK ===== -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="ðŸšœ" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="SAHA OPERASYON &amp; MONTAJ LÄ°STESÄ°" 
                           FontSize="22" FontWeight="Bold" Foreground="#2E7D32"/>
                <TextBlock Text="Kurulum, bakÄ±m ve keÅŸif iÅŸleri" 
                           FontSize="12" Foreground="{StaticResource TextSecondaryColor}"/>
            </StackPanel>
            
            <Button Content="ðŸ”„ Yenile" 
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding RefreshCommand}"
                    Margin="30,0,0,0"
                    VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ===== KATEGORÄ° TOGGLE BUTONLARI ===== -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="16,12" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" Opacity="0.04" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Kategori Filtresi" FontSize="11" Foreground="#888" Margin="0,0,0,8"/>
                <ItemsControl ItemsSource="{Binding CategoryFilters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Content="{Binding FullDisplay}"
                                          Style="{StaticResource CategoryToggleButton}"
                                          Command="{Binding DataContext.ToggleCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                          CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- ===== FÄ°LTRE BAR ===== -->
        <Border Grid.Row="2" Style="{StaticResource FilterBarPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BaÅŸlangÄ±Ã§ Tarihi -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="BaÅŸlangÄ±Ã§" FontSize="11" Foreground="#888" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Width="130"
                                Style="{StaticResource ModernDatePicker}"/>
                </StackPanel>

                <!-- BitiÅŸ Tarihi -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="BitiÅŸ" FontSize="11" Foreground="#888" Margin="0,0,0,4"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Width="130"
                                Style="{StaticResource ModernDatePicker}"/>
                </StackPanel>

                <!-- Arama (Adres) -->
                <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="6" Padding="10,0" 
                        VerticalAlignment="Bottom" Height="34" Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ”" FontSize="14" VerticalAlignment="Center" 
                                   Foreground="#999" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalAlignment="Center"
                                 FontSize="13"/>
                    </Grid>
                </Border>

                <!-- Temizle -->
                <Button Grid.Column="3" Content="âœ• Temizle"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ClearFiltersCommand}"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- ===== DATA GRID ===== -->
        <Border Grid.Row="3" Background="White" CornerRadius="8" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.08" ShadowDepth="2"/>
            </Border.Effect>
            
            <DataGrid ItemsSource="{Binding FilteredFieldJobs}"
                      Style="{StaticResource ModernDataGrid}"
                      RowHeight="56"
                      BorderThickness="0"
                      IsReadOnly="True">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridColumnHeader}">
                        <Setter Property="Background" Value="#2E7D32"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding OpenFieldJobDetailCommand}"
                                  CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                </DataGrid.InputBindings>

                <DataGrid.Columns>
                    <!-- Job No (Badge) -->
                    <DataGridTemplateColumn Header="Ä°ÅŸ No" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#E8F5E9" CornerRadius="4" Padding="8,4"
                                        HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding JobNo}" 
                                               FontWeight="Bold" FontSize="11"
                                               Foreground="#2E7D32"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kategori (Icon + Text) -->
                    <DataGridTemplateColumn Header="Kategori" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                    <TextBlock Text="{Binding CategoryIcon}" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding CategoryDisplay}" 
                                               Foreground="{Binding CategoryColor}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Konum (Adres + Åžehir) -->
                    <DataGridTemplateColumn Header="Konum" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" Margin="8,0">
                                    <TextBlock Text="{Binding CustomerName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding LocationDisplay}" 
                                               FontSize="11" Foreground="#888"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Tarih/Saat -->
                    <DataGridTemplateColumn Header="Planlanan" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ScheduleDisplay}" 
                                           VerticalAlignment="Center"
                                           Margin="8,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#333"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ScheduledDate}" Value="{x:Null}">
                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Teknisyen -->
                    <DataGridTemplateColumn Header="Teknisyen" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                                    <Border Background="#E3F2FD" CornerRadius="12" Width="24" Height="24" Margin="0,0,6,0">
                                        <TextBlock Text="ðŸ‘¤" FontSize="12" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding AssignedTechnician}" 
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Aksiyonlar -->
                    <DataGridTemplateColumn Header="" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="ðŸ“" 
                                            Style="{StaticResource IconActionButton}"
                                            ToolTip="Haritada AÃ§"
                                            Command="{Binding DataContext.OpenMapCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="ðŸ“·" 
                                            Style="{StaticResource IconActionButton}"
                                            ToolTip="Montaj FotoÄŸraflarÄ±"
                                            Command="{Binding DataContext.ShowFieldPhotosCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="âœ…" 
                                            ToolTip="Ä°ÅŸi Tamamla"
                                            Command="{Binding DataContext.CompleteFieldJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource IconActionButton}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="4" Background="White" CornerRadius="6" Padding="16,10" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock VerticalAlignment="Center">
                    <Run Text="Toplam:" Foreground="#888"/>
                    <Run Text="{Binding TotalCount, Mode=OneWay}" FontWeight="Bold" Foreground="#2E7D32"/>
                    <Run Text="saha iÅŸi" Foreground="#888"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
