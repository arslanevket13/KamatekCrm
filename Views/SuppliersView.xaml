                                Width="30" Height="30" Background="Transparent" BorderThickness="0"
                                Foreground="#888" FontSize="12" Cursor="Hand" Margin="0,0,5,0"/>
                    </Grid>
                </Border>

                <!-- Filtreleme Paneli -->
                <Border Grid.Row="2" Margin="15,0,15,10" Background="#1e1e3a" CornerRadius="8" Padding="12,10">
                    <StackPanel>
                        <TextBlock Text="FÄ°LTRELER" FontSize="10" FontWeight="Bold" Foreground="#666" Margin="0,0,0,8"/>
                        <WrapPanel>
                            <CheckBox Content="BorÃ§lular" IsChecked="{Binding ShowDebtorsOnly}" 
                                      Foreground="#aaa" FontSize="12" Margin="0,0,15,5" VerticalContentAlignment="Center"/>
                            <CheckBox Content="Pasifleri GÃ¶ster" IsChecked="{Binding ShowInactiveSuppliers}" 
