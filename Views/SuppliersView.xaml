        </Grid.ColumnDefinitions>

        <!-- ==================== PANEL 1: TEDARÄ°KÃ‡Ä° LÄ°STESÄ° ==================== -->
        <Border Grid.Column="0" Background="#252541" CornerRadius="12" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
