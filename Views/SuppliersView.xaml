                                       Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ==================== BOÅž DURUM ==================== -->
        <Border Grid.Column="1" Background="#252541" CornerRadius="12"
                Visibility="{Binding SelectedSupplier, Converter={StaticResource InvertedBoolToVis}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.08" ShadowDepth="4" Direction="270"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ¢" FontSize="64" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="TedarikÃ§i SeÃ§ilmedi" FontSize="20" FontWeight="Bold" Foreground="#888" Margin="0,16,0,8" HorizontalAlignment="Center"/>
                <TextBlock Text="Soldan bir tedarikÃ§i seÃ§in veya yeni bir tedarikÃ§i ekleyin" FontSize="14" Foreground="#666" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
