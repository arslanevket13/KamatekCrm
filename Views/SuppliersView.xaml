                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="IBAN" FontSize="11" Foreground="#888"/>
                            <TextBox Text="{Binding SelectedSupplier.IBAN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBox}" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Adres -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Adres" FontSize="11" Foreground="#888"/>
                            <TextBox Text="{Binding SelectedSupplier.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
