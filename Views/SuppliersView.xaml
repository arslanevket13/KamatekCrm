                                        <TextBox Text="{Binding SelectedSupplier.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernTextBox}" Margin="0,6,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,5,15">
                                        <TextBlock Text="E-posta" FontSize="12" Foreground="#888"/>
                                        <TextBox Text="{Binding SelectedSupplier.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
