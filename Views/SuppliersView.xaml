                <!-- Header -->
                <Border Grid.Row="0" Padding="20,20,20,15" BorderBrush="#333" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="ðŸ¢ TedarikÃ§i YÃ¶netimi" FontSize="20" FontWeight="Bold" Foreground="White"/>
