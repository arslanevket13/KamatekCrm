                                    </StackPanel>
                                </Border>
                                <Border Background="#1a1a2e" CornerRadius="8" Padding="16" Margin="5,0">
                                    <StackPanel>
                                        <TextBlock Text="Mevcut Bakiye" FontSize="12" Foreground="#888"/>
                                        <TextBlock Text="{Binding SelectedSupplier.Balance, StringFormat='â‚º{0:N2}', FallbackValue='â‚º0,00'}" 
                                                   FontSize="24" FontWeight="Bold" Margin="0,4,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#27ae60"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedSupplier.Balance, Converter={StaticResource GreaterThanZero}}" Value="True">
                                                            <Setter Property="Foreground" Value="#e74c3c"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1a1a2e" CornerRadius="8" Padding="16" Margin="10,0,0,0">
                                    <StackPanel>
