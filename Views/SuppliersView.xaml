                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="IBAN" FontSize="12" Foreground="#888"/>
                                    <TextBox Text="{Binding SelectedSupplier.IBAN, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource ModernTextBox}" Margin="0,6,0,0"/>
                                </StackPanel>

                                <!-- Notlar -->
                                <TextBlock Text="NOTLAR" FontSize="12" FontWeight="Bold" Foreground="#888" Margin="0,15,0,12"/>
                                <TextBox Text="{Binding SelectedSupplier.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource ModernTextBox}" Height="100" TextWrapping="Wrap"
                                         AcceptsReturn="True" VerticalContentAlignment="Top" Padding="10"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- TAB 2: SÄ°PARÄ°Åž GEÃ‡MÄ°ÅžÄ° -->
