                <!-- Arama Kutusu -->
                <Border Grid.Row="1" Margin="15,15,15,10" Background="#1a1a2e" CornerRadius="8" BorderBrush="#444" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="14" VerticalAlignment="Center" Margin="12,0,8,0" Foreground="#888"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" Height="38" FontSize="13"
                                 VerticalContentAlignment="Center" Foreground="White"/>
