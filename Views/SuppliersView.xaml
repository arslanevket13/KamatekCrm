                                    <StackPanel>
                                        <TextBlock Text="Toplam SipariÅŸ" FontSize="12" Foreground="#888"/>
                                        <TextBlock Text="{Binding SupplierPurchaseHistory.Count, FallbackValue='0'}" 
                                                   FontSize="24" FontWeight="Bold" Foreground="#3498db" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#1a1a2e" CornerRadius="8" Padding="16" Margin="5,0">
                                    <StackPanel>
                                        <TextBlock Text="Mevcut Bakiye" FontSize="12" Foreground="#888"/>
                                        <TextBlock Text="{Binding SelectedSupplier.Balance, StringFormat='â‚º{0:N2}', FallbackValue='â‚º0,00'}" 
