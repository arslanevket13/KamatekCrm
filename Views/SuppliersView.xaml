                    <!-- TAB 1: GENEL BÄ°LGÄ°LER -->
                    <TabItem Header="ðŸ“‹ Genel Bilgiler" FontSize="14" FontWeight="SemiBold">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                            <StackPanel MaxWidth="750">
                                <!-- Firma Bilgileri -->
                                <TextBlock Text="FÄ°RMA BÄ°LGÄ°LERÄ°" FontSize="12" FontWeight="Bold" Foreground="#888" Margin="0,0,0,12"/>
                                
