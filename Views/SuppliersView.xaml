                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="1" Content="âœ•" Command="{Binding ClearTypeFilterCommand}"
                                    Width="32" Height="32" Background="#333" BorderThickness="0"
                                    Foreground="#888" FontSize="12" Cursor="Hand" Margin="5,0,0,0"
                                    ToolTip="Tip filtresini temizle"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Liste -->
                <ListBox Grid.Row="3" ItemsSource="{Binding FilteredSuppliers}" 
                         SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"
                         Background="Transparent" BorderThickness="0" Margin="10,0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" Padding="14,12" Margin="5,3" 
                                                Background="#1a1a2e" CornerRadius="8" Cursor="Hand">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#3498db"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#2d2d52"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
