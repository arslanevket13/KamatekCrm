                    <StackPanel>
                        <!-- Firma Bilgileri -->
                        <TextBlock Text="FÄ°RMA BÄ°LGÄ°LERÄ°" FontSize="11" FontWeight="Bold" Foreground="#666" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
