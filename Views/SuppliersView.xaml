                                        <Run Text="{Binding SelectedSupplier.Balance, StringFormat='â‚º{0:N2}'}" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                                <!-- Vade Badge -->
                                <Border Background="#8e44ad" CornerRadius="4" Padding="8,3">
                                    <TextBlock FontSize="11" Foreground="White">
                                        <Run Text="Vade: "/>
                                        <Run Text="{Binding SelectedSupplier.PaymentTermDays}" FontWeight="Bold"/>
                                        <Run Text=" gÃ¼n"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Tab AlanÄ± -->
                <TabControl Grid.Row="1" Margin="0" Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
