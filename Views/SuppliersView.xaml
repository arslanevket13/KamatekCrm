                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,15">
                                        <TextBlock Text="Vergi Dairesi" FontSize="12" Foreground="#888"/>
                                        <TextBox Text="{Binding SelectedSupplier.TaxOffice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernTextBox}" Margin="0,6,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,15">
                                        <TextBlock Text="Vergi NumarasÄ±" FontSize="12" Foreground="#888"/>
                                        <TextBox Text="{Binding SelectedSupplier.TaxNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
