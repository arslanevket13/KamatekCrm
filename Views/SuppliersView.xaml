                                             Style="{StaticResource ModernTextBox}" Height="70" TextWrapping="Wrap"
                                             AcceptsReturn="True" VerticalContentAlignment="Top" Padding="10" Margin="0,6,0,0"/>
                                </StackPanel>

                                <!-- Ticari Bilgiler -->
                                <TextBlock Text="TÄ°CARÄ° BÄ°LGÄ°LER" FontSize="12" FontWeight="Bold" Foreground="#888" Margin="0,15,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,15">
                                        <TextBlock Text="Vergi Dairesi" FontSize="12" Foreground="#888"/>
                                        <TextBox Text="{Binding SelectedSupplier.TaxOffice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernTextBox}" Margin="0,6,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,5,15">
                                        <TextBlock Text="Vergi NumarasÄ±" FontSize="12" Foreground="#888"/>
