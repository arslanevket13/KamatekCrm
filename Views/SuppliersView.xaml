                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,15">
                                        <TextBlock Text="Telefon" FontSize="12" Foreground="#888"/>
                                        <TextBox Text="{Binding SelectedSupplier.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
