<UserControl x:Class="KamatekCrm.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: LIST -->
        <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="White" Margin="0,0,10,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <TextBox Grid.Row="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="5" Margin="0,0,0,5" ToolTip="Tedarikçi Ara..."/>

                <!-- List -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}"
                          AutoGenerateColumns="False" IsReadOnly="True" GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          Background="White" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Firma" Binding="{Binding CompanyName}" Width="*"/>
                        <DataGridTextColumn Header="İlgili Kişi" Binding="{Binding ContactPerson}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add Button -->
                <Button Grid.Row="2" Command="{Binding AddNewCommand}" Content="YENİ TEDARİKÇİ"
                        Margin="0,5,0,0" Height="40"
                        Style="{StaticResource ModernButton}" Background="#1A237E" Foreground="White" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- RIGHT PANEL: DETAILS -->
        <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="White">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="{Binding SelectedSupplier.CompanyName, TargetNullValue='Tedarikçi Seçiniz'}" 
                               FontSize="20" FontWeight="Bold" Foreground="#1A237E"/>
                </StackPanel>

                <!-- Tabs -->
                <TabControl Grid.Row="1" Visibility="{Binding SelectedSupplier, Converter={StaticResource NullToVis}}">
                    <!-- Tab 1: General -->
                    <TabItem Header="Genel Bilgiler">
                        <ScrollViewer>
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Firma Ünvanı*" VerticalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedSupplier.CompanyName}" Margin="0,0,0,5" Padding="5"/>

                                <TextBlock Grid.Row="1" Text="İlgili Kişi" VerticalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedSupplier.ContactPerson}" Margin="0,0,0,5" Padding="5"/>

                                <TextBlock Grid.Row="2" Text="Telefon" VerticalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedSupplier.PhoneNumber}" Margin="0,0,0,5" Padding="5"/>

                                <TextBlock Grid.Row="3" Text="Adres" VerticalAlignment="Top" Margin="0,5,0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedSupplier.Address}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,5" Padding="5"/>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Tab 2: Financial -->
                    <TabItem Header="Finansal Detaylar">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Vergi Dairesi" VerticalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedSupplier.TaxOffice}" Margin="0,0,0,5" Padding="5"/>

                            <TextBlock Grid.Row="1" Text="Vergi No" VerticalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedSupplier.TaxNumber}" Margin="0,0,0,5" Padding="5"/>

                            <TextBlock Grid.Row="2" Text="IBAN" VerticalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedSupplier.IBAN}" Margin="0,0,0,5" Padding="5"/>
                        </Grid>
                    </TabItem>

                    <!-- Tab 3: History -->
                    <TabItem Header="Sipariş Geçmişi">
                        <TextBlock Text="Sipariş geçmişi burada listelenecek." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAA"/>
                    </TabItem>
                </TabControl>

                <!-- Footer / Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0"
                            Visibility="{Binding SelectedSupplier, Converter={StaticResource NullToVis}}">
                    <Button Command="{Binding DeleteCommand}" Content="SİL" Width="100" Margin="0,0,10,0"
                            Style="{StaticResource ModernButton}" Background="#D32F2F" Foreground="White" FontWeight="Bold"/>
                    <Button Command="{Binding SaveCommand}" Content="KAYDET" Width="150"
                            Style="{StaticResource ModernButton}" Background="#1A237E" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
