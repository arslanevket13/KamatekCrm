                                    <DataGridTextColumn Header="Durum" Binding="{Binding Status}" Width="120"/>
                                    <DataGridTextColumn Header="Toplam Tutar" Binding="{Binding TotalAmount, StringFormat='â‚º{0:N2}'}" Width="*"/>
                                    <DataGridTemplateColumn Header="" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="ðŸ‘ï¸ Detay" FontSize="11" Padding="8,4"
                                                        Command="{Binding DataContext.ViewOrderDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#3498db" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- Alt Butonlar -->
                <Border Grid.Row="2" Padding="24,16" BorderBrush="#333" BorderThickness="0,1,0,0">
                    <DockPanel>
                        <Button DockPanel.Dock="Right" Command="{Binding SaveCommand}" Height="44" Width="160"
                                Style="{StaticResource ModernButton}" Background="#27ae60">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¾" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text=" Kaydet" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="* Zorunlu alan" FontSize="11" Foreground="#666"/>
