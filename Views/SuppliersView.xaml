                                    </TextBlock>
                                </StackPanel>
                                <!-- Bakiye GÃ¶stergesi (Renk Kodlu) -->
                                <Border Grid.Column="1" CornerRadius="4" Padding="8,4" VerticalAlignment="Center"
                                        Visibility="{Binding Balance, Converter={StaticResource IntToVis}}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#27ae60"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Balance, Converter={StaticResource GreaterThanZero}}" Value="True">
                                                    <Setter Property="Background" Value="#e74c3c"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Balance, StringFormat='â‚º{0:N0}'}" 
                                               FontSize="11" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Yeni Ekle Butonu -->
                <Border Grid.Row="4" Padding="15">
                    <Button Command="{Binding CreateNewCommand}" Height="44" Style="{StaticResource ModernButton}"
                            Background="#3498db">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text=" Yeni TedarikÃ§i Ekle" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
