<UserControl x:Class="KamatekCrm.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- KPI Cards -->
            <RowDefinition Height="*"/>    <!-- Charts -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Analitik &amp; Raporlar ðŸ“ˆ" FontSize="24" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20"/>

        <!-- KPI Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card 1 -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="Toplam Ä°ÅŸler" Foreground="#546E7A" FontSize="14"/>
                    <TextBlock Text="{Binding TotalJobs}" FontSize="28" FontWeight="Bold" Foreground="#2196F3"/>
                </StackPanel>
            </Border>

            <!-- Card 2 -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="Tamamlanan" Foreground="#546E7A" FontSize="14"/>
                    <TextBlock Text="{Binding CompletedJobs}" FontSize="28" FontWeight="Bold" Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- Card 3 -->
            <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <StackPanel>
                    <TextBlock Text="BaÅŸarÄ± OranÄ±" Foreground="#546E7A" FontSize="14"/>
                    <TextBlock Text="{Binding SuccessRate, StringFormat={}{0:N1}%}" FontSize="28" FontWeight="Bold" Foreground="#FF9800"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!-- Pie -->
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1.5*"/> <!-- Bar/Line -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. Pie Chart: Ä°ÅŸ TÃ¼rÃ¼ DaÄŸÄ±lÄ±mÄ± -->
            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ArÄ±za TÃ¼rÃ¼ DaÄŸÄ±lÄ±mÄ±" FontWeight="Bold" Foreground="#455A64" Margin="0,0,0,10"/>
                    <lvc:PieChart Grid.Row="1" Series="{Binding JobDistributionSeries}" LegendPosition="Right"/>
                </Grid>
            </Border>

            <!-- 2. Column Chart: Teknisyen PerformansÄ± -->
            <Border Grid.Column="2" Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="En Ä°yi Teknisyenler (Top 5)" FontWeight="Bold" Foreground="#455A64" Margin="0,0,0,10"/>
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding TechPerformanceSeries}" XAxes="{Binding TechXAxes}"/>
                </Grid>
            </Border>

            <!-- 3. Line Chart: AylÄ±k Trend -->
            <Border Grid.Column="2" Grid.Row="2" Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Son 6 Ay Ä°ÅŸ Trendi" FontWeight="Bold" Foreground="#455A64" Margin="0,0,0,10"/>
                    <lvc:CartesianChart Grid.Row="1" Series="{Binding TrendSeries}" XAxes="{Binding TrendXAxes}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
