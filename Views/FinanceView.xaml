<UserControl x:Class="KamatekCrm.Views.FinanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:KamatekCrm.ViewModels"
             Background="#121929">

    <UserControl.Resources>
        <!-- Kart Stili -->
        <Style x:Key="SummaryCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
        
        <!-- BÃ¼yÃ¼k Tutar Stili -->
        <Style x:Key="BigAmount" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Kart BaÅŸlÄ±ÄŸÄ± -->
        <Style x:Key="CardLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#B0BEC5"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Summary Cards -->
            <RowDefinition Height="Auto"/>  <!-- Gider Ekleme -->
            <RowDefinition Height="*"/>     <!-- Ä°ÅŸlem Listesi -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="ðŸ’° KASA / FÄ°NANS" 
                           FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="GÃ¼nlÃ¼k gelir-gider takibi ve kasa raporu" 
                           FontSize="13" Foreground="#78909C" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Tarih Kontrolleri -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="â—€" Command="{Binding PreviousDayCommand}"
                        Width="32" Height="32" FontSize="14"
                        Background="#2a3f54" Foreground="White" BorderThickness="0"
                        Margin="0,0,4,0" Cursor="Hand"/>
                
                <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}" 
                            Width="140" VerticalAlignment="Center"
                            Background="#1a2a3a" Foreground="White" BorderThickness="0"/>
                
                <Button Content="â–¶" Command="{Binding NextDayCommand}"
                        Width="32" Height="32" FontSize="14"
                        Background="#2a3f54" Foreground="White" BorderThickness="0"
                        Margin="4,0,12,0" Cursor="Hand"/>

                <Button Content="ðŸ“… BugÃ¼n" Command="{Binding GoToTodayCommand}"
                        Padding="12,6" Background="#1976D2" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Margin="0,0,12,0"/>

                <CheckBox Content="AylÄ±k GÃ¶rÃ¼nÃ¼m" 
                          IsChecked="{Binding ShowMonthly}" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- SUMMARY CARDS -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
            
            <!-- Nakit Gelir -->
            <Border Style="{StaticResource SummaryCard}" Background="#1B5E20">
                <StackPanel>
                    <TextBlock Text="NAKÄ°T GELÄ°R" Style="{StaticResource CardLabel}"/>
                    <TextBlock Text="{Binding CashIncome, StringFormat='â‚º{0:N2}'}" 
                               Style="{StaticResource BigAmount}"/>
                    <TextBlock Text="ðŸ’µ Nakit Ã–demeler" Foreground="#81C784" FontSize="11" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Kredi KartÄ± Gelir -->
            <Border Style="{StaticResource SummaryCard}" Background="#0D47A1">
                <StackPanel>
                    <TextBlock Text="KREDÄ° KARTI" Style="{StaticResource CardLabel}"/>
                    <TextBlock Text="{Binding CardIncome, StringFormat='â‚º{0:N2}'}" 
                               Style="{StaticResource BigAmount}"/>
                    <TextBlock Text="ðŸ’³ Kart Ã–demeleri" Foreground="#64B5F6" FontSize="11" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Giderler -->
            <Border Style="{StaticResource SummaryCard}" Background="#B71C1C">
                <StackPanel>
                    <TextBlock Text="GÄ°DERLER" Style="{StaticResource CardLabel}"/>
                    <TextBlock Text="{Binding TotalExpense, StringFormat='â‚º{0:N2}'}" 
                               Style="{StaticResource BigAmount}"/>
                    <TextBlock Text="ðŸ“¤ Masraflar" Foreground="#EF9A9A" FontSize="11" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Net Kasa -->
            <Border Style="{StaticResource SummaryCard}" Background="#4A148C">
                <StackPanel>
                    <TextBlock Text="NET KASA" Style="{StaticResource CardLabel}"/>
                    <TextBlock Text="{Binding NetBalanceDisplay}" 
                               Style="{StaticResource BigAmount}"/>
                    <TextBlock Text="ðŸ“Š GÃ¼n Sonu Bakiye" Foreground="#CE93D8" FontSize="11" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- GÄ°DER EKLEME BÃ–LÃœMÃœ -->
        <Border Grid.Row="2" Background="#1a2a3a" CornerRadius="12" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="âž– GÄ°DER EKLE:" 
                           FontSize="14" FontWeight="SemiBold" Foreground="White"
                           VerticalAlignment="Center" Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Tutar (â‚º)" Foreground="#78909C" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewExpenseAmount, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,8" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Kategori" Foreground="#78909C" FontSize="11" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding ExpenseCategories}"
                              SelectedItem="{Binding NewExpenseCategory}"
                              Padding="10,8" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="0,0,12,0">
                    <TextBlock Text="AÃ§Ä±klama" Foreground="#78909C" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewExpenseDescription, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,8" FontSize="14" 
                             ToolTip="Ã–rn: Elektrik faturasÄ±, Malzeme alÄ±mÄ±..."/>
                </StackPanel>

                <Button Grid.Column="4" Content="ðŸ’¾ KAYDET" 
                        Command="{Binding AddExpenseCommand}"
                        Padding="20,12" FontSize="14" FontWeight="Bold"
                        Background="#E65100" Foreground="White" BorderThickness="0"
                        VerticalAlignment="Bottom" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Ä°ÅžLEM LÄ°STESÄ° -->
        <Border Grid.Row="3" Background="#1a2a3a" CornerRadius="12" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Liste Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ðŸ“‹ KASA HAREKETLERÄ°" 
                               FontSize="14" FontWeight="SemiBold" Foreground="White"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="200" Padding="10,8" Margin="0,0,8,0"
                                 Background="#0d1821" Foreground="White" BorderBrush="#3a5a7c">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="#0d1821"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <Button Content="ðŸ”„" Command="{Binding RefreshCommand}"
                                Width="36" Height="36" FontSize="16"
                                Background="#2a3f54" Foreground="White" BorderThickness="0"
                                ToolTip="Yenile" Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding FilteredTransactions}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          RowBackground="#1e3a4f"
                          AlternatingRowBackground="#162a3a"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#2a4a5f"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          RowHeight="45"
                          CanUserAddRows="False">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0d1821"/>
                            <Setter Property="Foreground" Value="#90CAF9"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#2a4a5f"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2196F3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TARÄ°H" Width="130"
                                            Binding="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}"/>

                        <DataGridTemplateColumn Header="TÃœR" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Background" Value="#1B5E20"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsExpense}" Value="True">
                                                        <Setter Property="Background" Value="#B71C1C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Foreground="White" FontSize="11" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TransactionType}" Value="CashIncome">
                                                            <Setter Property="Text" Value="ðŸ’µ NAKÄ°T"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TransactionType}" Value="CardIncome">
                                                            <Setter Property="Text" Value="ðŸ’³ KART"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TransactionType}" Value="Expense">
                                                            <Setter Property="Text" Value="ðŸ“¤ GÄ°DER"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TransactionType}" Value="TransferIncome">
                                                            <Setter Property="Text" Value="ðŸ¦ HAVALE+"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TransactionType}" Value="TransferExpense">
                                                            <Setter Property="Text" Value="ðŸ¦ HAVALE-"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="KATEGORÄ°" Width="110"
                                            Binding="{Binding Category}"/>

                        <DataGridTextColumn Header="AÃ‡IKLAMA" Width="*"
                                            Binding="{Binding Description}"/>

                        <DataGridTextColumn Header="MÃœÅžTERÄ°" Width="150"
                                            Binding="{Binding Customer.FullName}"/>

                        <DataGridTemplateColumn Header="TUTAR" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="13" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Amount, StringFormat='â‚º{0:N2}'}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsExpense}" Value="True">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ðŸ—‘ï¸" 
                                            Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="#F44336" FontSize="14" Cursor="Hand"
                                            ToolTip="Sil (Sadece Admin)"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
