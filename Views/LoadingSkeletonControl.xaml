<UserControl x:Class="KamatekCrm.Views.LoadingSkeletonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Shimmer Brush -->
        <LinearGradientBrush x:Key="ShimmerBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="#E8E8E8" Offset="0"/>
            <GradientStop Color="#F8F8F8" Offset="0.4"/>
            <GradientStop Color="#F8F8F8" Offset="0.6"/>
            <GradientStop Color="#E8E8E8" Offset="1"/>

            <LinearGradientBrush.RelativeTransform>
                <TranslateTransform x:Name="ShimmerTransform" X="-1"/>
            </LinearGradientBrush.RelativeTransform>
        </LinearGradientBrush>
    </UserControl.Resources>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation 
                        Storyboard.TargetName="ShimmerTransform"
                        Storyboard.TargetProperty="X"
                        From="-1" To="2"
                        Duration="0:0:1.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <Grid>
        <!-- Dashboard Skeleton -->
        <StackPanel Margin="24">
            <!-- Header Skeleton -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Border Background="{StaticResource ShimmerBrush}" Height="28" Width="200" 
                            CornerRadius="4" HorizontalAlignment="Left"/>
                    <Border Background="{StaticResource ShimmerBrush}" Height="14" Width="300" 
                            CornerRadius="4" HorizontalAlignment="Left" Margin="0,8,0,0"/>
                </StackPanel>
                <Border Grid.Column="1" Background="{StaticResource ShimmerBrush}" 
                        Height="36" Width="100" CornerRadius="8"/>
            </Grid>
            
            <!-- Stats Cards Skeleton -->
            <UniformGrid Columns="4" Margin="0,0,0,20">
                <Border Background="{StaticResource ShimmerBrush}" Height="100" Margin="0,0,8,0" CornerRadius="12"/>
                <Border Background="{StaticResource ShimmerBrush}" Height="100" Margin="4,0" CornerRadius="12"/>
                <Border Background="{StaticResource ShimmerBrush}" Height="100" Margin="4,0" CornerRadius="12"/>
                <Border Background="{StaticResource ShimmerBrush}" Height="100" Margin="8,0,0,0" CornerRadius="12"/>
            </UniformGrid>
            
            <!-- Main Content Skeleton -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="{StaticResource ShimmerBrush}" 
                        Height="350" Margin="0,0,8,0" CornerRadius="12"/>
                <Border Grid.Column="1" Background="{StaticResource ShimmerBrush}" 
                        Height="350" Margin="8,0" CornerRadius="12"/>
                <Border Grid.Column="2" Background="{StaticResource ShimmerBrush}" 
                        Height="350" Margin="8,0,0,0" CornerRadius="12"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
