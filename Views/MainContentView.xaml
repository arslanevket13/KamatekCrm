                        <!-- HÄ±zlÄ± EriÅŸim ButonlarÄ± -->
                        <Border Margin="20,15,20,8" BorderThickness="0,1,0,0" BorderBrush="#3a5a7c"/>
                        <TextBlock Text="HIZLI ERÄ°ÅžÄ°M" 
                                   Foreground="#7a9ab8" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"
                                   Margin="20,5,20,10"/>

                        <Button Content="âš¡ HÄ±zlÄ± Kabul (ArÄ±za KaydÄ±)" 
                                Style="{StaticResource NavButton}"
