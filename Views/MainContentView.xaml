                        <Button Content="ðŸ” ArÄ±za Takip &amp; Ä°ÅŸlem" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding OpenRepairTrackingCommand}"/>

                        <Button Content="ðŸ”§ Tamir Listesi" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding NavigateToRepairListCommand}"/>

                        <Button Content="ðŸšœ Saha Ä°ÅŸleri" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding NavigateToFieldJobListCommand}"/>
                        
                        <Button Content="ðŸ—ï¸ PROJE &amp; TEKLÄ°F" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding OpenProjectQuoteCommand}"
                                Background="#1565C0"
                                Foreground="White"
                                FontWeight="SemiBold"/>

                        <Button Content="ðŸ›’ HIZLI SATIÅž (KASA)" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding OpenDirectSalesCommand}"
                                Background="#2E7D32"
                                Foreground="White"
                                FontWeight="SemiBold"/>

                        <Button Content="ðŸ’° FÄ°NANS / KASA" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding NavigateToFinanceCommand}"
                                Background="#E65100"
                                Foreground="White"
                                FontWeight="SemiBold"/>

                        <!-- Envanter YÃ¶netimi BÃ¶lÃ¼mÃ¼ -->
                        <Border Margin="20,20,20,10" BorderThickness="0,1,0,0" BorderBrush="#3a5a7c"/>
                        <TextBlock Text="ENVANTER YÃ–NETÄ°MÄ°" 
                                   Foreground="#7a9ab8" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"
                                   Margin="20,5,20,10"/>

                        <Button Content="ðŸ“‹ Stok SayÄ±m" 
                                Style="{StaticResource NavButton}"
                                Command="{Binding NavigateToStockCountCommand}"/>
                        
