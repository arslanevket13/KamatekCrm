                <!-- Navigasyon ButonlarÄ± -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10,0,0">
                        <Button Content="ðŸ  Ana Sayfa" 
                                Style="{StaticResource NavButton}"
