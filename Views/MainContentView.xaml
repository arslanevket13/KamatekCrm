                                Style="{StaticResource NavButton}"
                                Command="{Binding NavigateToReportsCommand}"/>

                        <!-- YÃ¶netim BÃ¶lÃ¼mÃ¼ (Sadece Admin) -->
                        <Border Margin="20,20,20,10" BorderThickness="0,1,0,0" BorderBrush="#3a5a7c"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="YÃ–NETÄ°M" 
                                   Foreground="#7a9ab8" 
                                   FontSize="10" 
                                   FontWeight="SemiBold"
                                   Margin="20,5,20,10"
                                   Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVis}}"/>

                        <Button Content="ðŸ‘¤ KullanÄ±cÄ±lar" 
                                Style="{StaticResource NavButton}"
