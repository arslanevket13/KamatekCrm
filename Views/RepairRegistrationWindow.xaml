                        <Run Text=" MÃœÅžTERÄ° BÄ°LGÄ°LERÄ°"/>
                    </TextBlock>
                    
                    <!-- MÃ¼ÅŸteri Arama -->
                    <TextBlock Style="{StaticResource FieldLabel}" Text="MÃ¼ÅŸteri SeÃ§in *"/>
                    <ComboBox ItemsSource="{Binding Customers}"
