                                 Margin="0,8,0,0" TextAlignment="Right" Background="White"/>

                        <TextBlock Grid.Row="2" Text="Ä°ndirim:" Foreground="#E57373" Margin="0,8,0,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DiscountAmount, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,8,0,0" TextAlignment="Right" Background="White" Foreground="#E57373"/>

                        <Separator Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10"/>
                        
                        <TextBlock Grid.Row="4" Text="GENEL TOPLAM:" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding GrandTotal, StringFormat=C2}" 
                                   HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" Foreground="#D32F2F"/>
                    </Grid>
                </Grid>

                <!-- Actions -->
                <StackPanel Grid.Row="4">
                    <Button Content="ðŸ–¨ï¸ Servis FiÅŸi YazdÄ±r" Height="40" Margin="0,0,0,10"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding PrintServiceFormCommand}"/>
                    
                    <Button Content="âœ… Ä°ÅžLEMÄ° TAMAMLA &amp; TESLÄ°M ET" Height="50" 
                            Background="#1565C0" Foreground="White" FontWeight="Bold" FontSize="13"
                            Command="{Binding CompleteJobCommand}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Empty State (No selection) -->
        <Border Grid.Column="1" Grid.ColumnSpan="2" Background="White" 
                Visibility="{Binding IsJobSelected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”" FontSize="60" HorizontalAlignment="Center" Foreground="#DDD"/>
                <TextBlock Text="LÃ¼tfen soldaki listeden bir iÅŸ seÃ§in." FontSize="20" Foreground="Gray" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
