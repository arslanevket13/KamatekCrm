            </Grid.RowDefinitions>

            <!-- 1. Cihaz & MÃ¼ÅŸteri KartÄ± -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
