<UserControl x:Class="KamatekCrm.Views.StockReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:KamatekCrm.Views"
             xmlns:viewmodels="clr-namespace:KamatekCrm.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="{StaticResource BackgroundColor}">

    <UserControl.DataContext>
        <viewmodels:StockReportsViewModel/>
    </UserControl.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filters -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Summary -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="ðŸ“Š" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Stok Hareketleri Raporu" 
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryColor}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Filters -->
        <Border Grid.Row="1" Style="{StaticResource CardPanel}" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Start Date -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Label Content="BaÅŸlangÄ±Ã§ Tarihi" Style="{StaticResource ModernLabel}"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                                Style="{StaticResource {x:Type DatePicker}}"/>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <Label Content="BitiÅŸ Tarihi" Style="{StaticResource ModernLabel}"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                                Style="{StaticResource {x:Type DatePicker}}"/>
                </StackPanel>

                <!-- Transaction Type -->
                <StackPanel Grid.Row="0" Grid.Column="4">
                    <Label Content="Ä°ÅŸlem Tipi" Style="{StaticResource ModernLabel}"/>
                    <ComboBox ItemsSource="{Binding TransactionTypes}"
                              SelectedValue="{Binding SelectedTransactionType}"
                              SelectedValuePath="Type"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Warehouse -->
                <StackPanel Grid.Row="0" Grid.Column="6">
                    <Label Content="Depo" Style="{StaticResource ModernLabel}"/>
                    <ComboBox ItemsSource="{Binding Warehouses}"
                              SelectedItem="{Binding SelectedWarehouse}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBox}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="8,5"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>

                <!-- Product -->
                <StackPanel Grid.Row="0" Grid.Column="8">
                    <Label Content="ÃœrÃ¼n" Style="{StaticResource ModernLabel}"/>
                    <ComboBox ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              DisplayMemberPath="ProductName"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Buttons Row -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="9" 
                            Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ—‘ï¸ Filtreleri Temizle" 
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource SecondaryButton}" 
                            Height="35" Margin="0,0,10,0" Padding="15,0"/>
                    <Button Content="ðŸ“‹ Kopyala" 
                            Command="{Binding ExportCommand}"
                            Style="{StaticResource SecondaryButton}" 
                            Height="35" Margin="0,0,10,0" Padding="15,0"/>
                    <Button Content="ðŸ” Ara" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ModernButton}" 
                            Height="35" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Padding="0">
            <DataGrid ItemsSource="{Binding Transactions}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      Background="White"
                      RowHeight="38"
                      ColumnHeaderHeight="42">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="Foreground" Value="#495057"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="#DEE2E6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsIncoming}" Value="True">
                                <Setter Property="Background" Value="#F8FFF8"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsIncoming}" Value="False">
                                <Setter Property="Background" Value="#FFFAF8"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!-- Date -->
                    <DataGridTextColumn Header="Tarih" 
                                        Binding="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                        Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Transaction Type -->
                    <DataGridTemplateColumn Header="Ä°ÅŸlem Tipi" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="6,3" CornerRadius="4" HorizontalAlignment="Left" Margin="10,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E0E0E0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsIncoming}" Value="True">
                                                    <Setter Property="Background" Value="#C8E6C9"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsIncoming}" Value="False">
                                                    <Setter Property="Background" Value="#FFCDD2"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding TransactionTypeName}" FontWeight="Medium" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#424242"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncoming}" Value="True">
                                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsIncoming}" Value="False">
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Product Code -->
                    <DataGridTextColumn Header="ÃœrÃ¼n Kodu" 
                                        Binding="{Binding ProductCode}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Product Name -->
                    <DataGridTextColumn Header="ÃœrÃ¼n AdÄ±" 
                                        Binding="{Binding ProductName}" 
                                        Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Source Warehouse -->
                    <DataGridTextColumn Header="Kaynak" 
                                        Binding="{Binding SourceWarehouseName}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#F44336"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Target Warehouse -->
                    <DataGridTextColumn Header="Hedef" 
                                        Binding="{Binding TargetWarehouseName}" 
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Quantity -->
                    <DataGridTextColumn Header="Miktar" 
                                        Binding="{Binding Quantity}" 
                                        Width="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Reference -->
                    <DataGridTextColumn Header="Referans" 
                                        Binding="{Binding ReferenceId}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="FontSize" Value="10"/>
                                <Setter Property="Foreground" Value="#757575"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0"/>
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total In -->
            <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="0,0,7,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Toplam Giren" Foreground="#388E3C" FontWeight="Medium"/>
                    <TextBlock Text="{Binding TotalIn, StringFormat='{}{0:N0} adet'}" 
                               FontSize="20" FontWeight="Bold" Foreground="#2E7D32"/>
                </StackPanel>
            </Border>

            <!-- Total Out -->
            <Border Grid.Column="1" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="7,0,7,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“‰ Toplam Ã‡Ä±kan" Foreground="#D32F2F" FontWeight="Medium"/>
                    <TextBlock Text="{Binding TotalOut, StringFormat='{}{0:N0} adet'}" 
                               FontSize="20" FontWeight="Bold" Foreground="#C62828"/>
                </StackPanel>
            </Border>

            <!-- Net Change -->
            <Border Grid.Column="2" CornerRadius="8" Padding="15" Margin="7,0,7,0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NetChange, Converter={x:Static local:IsPositiveConverter.Instance}}" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding NetChange, Converter={x:Static local:IsNegativeConverter.Instance}}" Value="True">
                                <Setter Property="Background" Value="#FFEBEE"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Net DeÄŸiÅŸim" Foreground="#1976D2" FontWeight="Medium"/>
                    <TextBlock Text="{Binding NetChange, StringFormat='{}{0:+#,##0;-#,##0;0} adet'}" FontSize="20" FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NetChange, Converter={x:Static local:IsPositiveConverter.Instance}}" Value="True">
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding NetChange, Converter={x:Static local:IsNegativeConverter.Instance}}" Value="True">
                                        <Setter Property="Foreground" Value="#C62828"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Transaction Count -->
            <Border Grid.Column="3" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="7,0,0,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“ Toplam Hareket" Foreground="#E65100" FontWeight="Medium"/>
                    <TextBlock Text="{Binding TransactionCount, StringFormat='{}{0:N0} kayÄ±t'}" 
                               FontSize="20" FontWeight="Bold" Foreground="#EF6C00"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryColor}"/>
        </Grid>
    </Grid>
</UserControl>
