<Window x:Class="KamatekCrm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:KamatekCrm.ViewModels"
        mc:Ignorable="d"
        Title="Kamatek CRM Yönetim Paneli" Height="700" Width="1200" WindowStartupLocation="CenterScreen">

   

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#FFE0E0E0">
            <TextBlock Text="Kamatek CRM" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <Separator Margin="10,0"/>

            <Button Content="Müşteriler"
                    Command="{Binding ShowCustomersViewCommand}"
                    Margin="10" Padding="10"/>

            <Button Content="İş Kayıtları"
                    Command="{Binding ShowTicketsViewCommand}"
                    Margin="10,0,10,10" Padding="10" Click="Button_Click"/>
        </StackPanel>

        <Border Grid.Column="1" Background="#FFFFFFFF" Margin="10" CornerRadius="5">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Border>

    </Grid>
</Window>